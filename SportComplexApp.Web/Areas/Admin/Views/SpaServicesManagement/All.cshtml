@model IEnumerable<SportComplexApp.Web.ViewModels.Spa.SpaServiceViewModel>

@{
    ViewData["Title"] = "Manage Spa Services";
}

<div class="d-flex align-items-center justify-content-between mb-4">
    <h2 class="mb-0">Manage Spa Services</h2>
    <a asp-action="Add" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Add New Spa Service
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (!Model.Any())
{
    <div class="card shadow-sm text-center p-5 bg-light-subtle">
        <div class="display-6 mb-2">💆</div>
        <h5 class="mb-1">No spa services available</h5>
        <p class="text-muted mb-3">Add your first spa service to get started.</p>
        <a asp-action="Add" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add Spa Service
        </a>
    </div>
}
else
{
    <div class="row g-4 row-cols-1 row-cols-sm-2 row-cols-lg-3 row-cols-xl-4">
        @foreach (var spa in Model)
        {
            <div class="col">
                <div class="card spa-card h-100 shadow-sm border-0">
                    @if (!string.IsNullOrWhiteSpace(spa.ImageUrl))
                    {
                        <div class="spa-cover ratio ratio-16x9"
                             style="background-image: url('@spa.ImageUrl');"></div>
                    }
                    else
                    {
                        <div class="spa-cover ratio ratio-16x9 spa-cover--placeholder d-flex align-items-center justify-content-center">
                            <i class="bi bi-flower3 display-6 text-white-50"></i>
                        </div>
                    }

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title mb-1">@spa.Name</h5>

                        <p class="card-text text-muted small mb-3 clamp-3">
                            @spa.Description
                        </p>

                        <ul class="list-unstyled small text-muted mb-3">
                            <li><i class="bi bi-cash-coin text-success"></i> @spa.Price.ToString("F2") лв</li>
                            <li><i class="bi bi-stopwatch text-primary"></i> @spa.Duration мин</li>
                        </ul>

                        <div class="mt-auto d-flex gap-2">
                            <a asp-action="Edit" asp-route-id="@spa.Id" class="btn btn-outline-warning btn-sm">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@spa.Id" class="btn btn-outline-danger btn-sm">
                                <i class="bi bi-trash3"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <style>
        .spa-card {
            transition: transform .15s ease, box-shadow .15s ease;
            border-radius: 1rem;
        }

            .spa-card:hover {
                transform: translateY(-3px);
                box-shadow: 0 .75rem 1.5rem rgba(0,0,0,.1);
            }

        .spa-cover {
            background-size: cover;
            background-position: center;
            border-top-left-radius: 1rem;
            border-top-right-radius: 1rem;
        }

        .spa-cover--placeholder {
            background: linear-gradient(135deg, #f6d365, #fda085);
        }

        .card-title {
            line-height: 1.2;
        }

        .clamp-3 {
            display: -webkit-box;
            -webkit-line-clamp: 3;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }
    </style>
}
