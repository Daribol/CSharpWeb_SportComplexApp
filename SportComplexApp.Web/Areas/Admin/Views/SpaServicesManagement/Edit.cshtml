@model SportComplexApp.Web.ViewModels.Spa.AddSpaServiceViewModel

@{
    ViewData["Title"] = "Edit Spa Service";
}

<h2 class="mb-4 text-center">Edit Spa Service</h2>

<div class="card shadow-sm border-0">
    <div class="card-body">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="Name" class="form-label fw-semibold"></label>
                <input asp-for="Name" class="form-control" placeholder="Enter name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label fw-semibold"></label>
                <textarea asp-for="Description" class="form-control" rows="3" placeholder="Short description..."></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ProcedureDetails" class="form-label fw-semibold"></label>
                <textarea asp-for="ProcedureDetails" class="form-control" rows="4" placeholder="Details about the procedure..."></textarea>
                <span asp-validation-for="ProcedureDetails" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Price" class="form-label fw-semibold"></label>
                    <input asp-for="Price" class="form-control" placeholder="Price in лв" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="Duration" class="form-label fw-semibold"></label>
                    <input asp-for="Duration" class="form-control" placeholder="Duration in minutes" />
                    <span asp-validation-for="Duration" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="ImageUrl" class="form-label fw-semibold"></label>
                <input asp-for="ImageUrl" class="form-control" placeholder="Image URL" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-warning">
                    <i class="bi bi-save2"></i> Save Changes
                </button>
                <a asp-action="All" class="btn btn-secondary">
                    <i class="bi bi-x-circle"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
