@model SportComplexApp.Web.ViewModels.Spa.DeleteSpaServiceViewModel

@{
    ViewData["Title"] = "Delete Spa Service";
}

<div class="card border-danger shadow-sm mb-4">
    <div class="card-body">
        <h2 class="card-title text-danger mb-3">Delete Spa Service</h2>

        <div class="alert alert-warning">
            <strong>Are you sure</strong> you want to permanently delete the service:
            <span class="fw-bold text-dark">@Model.Name</span>?
        </div>

        <form asp-action="DeleteConfirmed" method="post" class="mt-3">
            <input type="hidden" asp-for="Id" />

            <div class="d-flex justify-content-start gap-2">
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash3"></i> Delete
                </button>
                <a asp-action="All" class="btn btn-secondary">
                    <i class="bi bi-x-circle"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
