@model SportComplexApp.Web.ViewModels.Spa.AddSpaServiceViewModel

@{
    ViewData["Title"] = "Add Spa Service";
}

<div class="d-flex align-items-center justify-content-between mb-4">
    <h2 class="mb-0" style="color:#00ffc8;">Add Spa Service</h2>
    <a asp-action="All" class="btn btn-outline-neon">
        <i class="bi bi-arrow-left-circle me-1"></i> Back
    </a>
</div>

@if (TempData["errorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["errorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card card-dark shadow-lg border-0 rounded-4">
    <div class="card-body p-4 p-md-5">
        <form asp-action="Add" method="post" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- Name -->
            <div class="mb-3">
                <label asp-for="Name" class="form-label text-light">Service name</label>
                <div class="input-group neon-input">
                    <span class="input-group-text neon-icon"><i class="bi bi-flower3"></i></span>
                    <input asp-for="Name" class="form-control" placeholder="e.g. Swedish Massage" />
                </div>
                <span asp-validation-for="Name" class="text-danger small"></span>
            </div>

            <!-- Description -->
            <div class="mb-3">
                <label asp-for="Description" class="form-label text-light">Short description</label>
                <textarea asp-for="Description" rows="3" class="form-control" placeholder="Relaxing full-body massage…"></textarea>
                <span asp-validation-for="Description" class="text-danger small"></span>
            </div>

            <!-- ProcedureDetails -->
            <div class="mb-3">
                <label asp-for="ProcedureDetails" class="form-label text-light">Procedure details</label>
                <textarea asp-for="ProcedureDetails" rows="4" class="form-control" placeholder="Steps, oils used, contraindications…"></textarea>
                <span asp-validation-for="ProcedureDetails" class="text-danger small"></span>
            </div>

            <div class="row g-3">
                <!-- Price -->
                <div class="col-md-6">
                    <label asp-for="Price" class="form-label text-light">Price (BGN)</label>
                    <div class="input-group neon-input">
                        <span class="input-group-text neon-icon"><i class="bi bi-cash-coin"></i></span>
                        <input asp-for="Price" class="form-control" placeholder="e.g. 79.00" />
                    </div>
                    <span asp-validation-for="Price" class="text-danger small"></span>
                </div>

                <!-- Duration -->
                <div class="col-md-6">
                    <label asp-for="Duration" class="form-label text-light">Duration (min)</label>
                    <div class="input-group neon-input">
                        <span class="input-group-text neon-icon"><i class="bi bi-stopwatch"></i></span>
                        <input asp-for="Duration" class="form-control" placeholder="e.g. 60" />
                    </div>
                    <span asp-validation-for="Duration" class="text-danger small"></span>
                </div>
            </div>

            <!-- ImageUrl -->
            <div class="mt-3">
                <label asp-for="ImageUrl" class="form-label text-light">Image URL</label>
                <div class="input-group neon-input">
                    <span class="input-group-text neon-icon"><i class="bi bi-image"></i></span>
                    <input asp-for="ImageUrl" class="form-control" placeholder="https://…" />
                </div>
                <span asp-validation-for="ImageUrl" class="text-danger small"></span>
            </div>

            <div class="d-flex justify-content-end gap-2 mt-4">
                <button type="submit" class="btn btn-neon">
                    <i class="bi bi-plus-circle me-1"></i> Add Spa Service
                </button>
                <a asp-action="All" class="btn btn-outline-neon">
                    <i class="bi bi-x-circle me-1"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
}
