@model SportComplexApp.Web.ViewModels.Spa.AddSpaServiceViewModel

@{
    ViewData["Title"] = "Add Spa Service";
}

<h2 class="mb-4 text-center">Add Spa Service</h2>

@if (TempData["errorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["errorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card shadow-sm border-0">
    <div class="card-body">
        <form asp-action="Add" method="post">
            <div class="mb-3">
                <label asp-for="Name" class="form-label fw-semibold"></label>
                <input asp-for="Name" class="form-control" placeholder="Enter spa service name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label fw-semibold"></label>
                <textarea asp-for="Description" class="form-control" rows="3" placeholder="Short description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ProcedureDetails" class="form-label fw-semibold"></label>
                <textarea asp-for="ProcedureDetails" class="form-control" rows="4" placeholder="Detailed procedure information"></textarea>
                <span asp-validation-for="ProcedureDetails" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Price" class="form-label fw-semibold"></label>
                    <input asp-for="Price" class="form-control" placeholder="Price in лв" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="Duration" class="form-label fw-semibold"></label>
                    <input asp-for="Duration" class="form-control" placeholder="Duration in minutes" />
                    <span asp-validation-for="Duration" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="ImageUrl" class="form-label fw-semibold"></label>
                <input asp-for="ImageUrl" class="form-control" placeholder="Link to image" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Add Spa Service
                </button>
                <a asp-action="All" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
