@using SportComplexApp.Web.ViewModels.Facility
@model DeleteFacilityViewModel

@{
    ViewData["Title"] = "Delete Facility";
}

<div class="card card-dark border-danger shadow-lg rounded-4 mb-4">
    <div class="card-body p-4">
        <h2 class="mb-3" style="color:#ff4d4d;">
            <i class="bi bi-exclamation-triangle-fill me-2"></i> Delete Facility
        </h2>

        <div class="alert alert-warning border-warning text-dark">
            <strong>Warning:</strong> You are about to delete the facility:
            <span class="fw-bold text-danger">@Model.Name</span>. This action <u>cannot</u> be undone.
        </div>

        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="d-flex justify-content-start gap-2 mt-3">
                <button type="submit" class="btn btn-outline-danger">
                    <i class="bi bi-trash me-1"></i> Yes, Delete
                </button>
                <a asp-action="All" class="btn btn-outline-neon">
                    <i class="bi bi-x-circle"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
}