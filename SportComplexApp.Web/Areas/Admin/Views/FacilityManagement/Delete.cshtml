@using SportComplexApp.Web.ViewModels.Facility
@model DeleteFacilityViewModel

@{
    ViewData["Title"] = "Delete Facility";
}

<div class="card border-danger shadow-sm mb-4">
    <div class="card-body">
        <h2 class="card-title text-danger mb-3">Delete Facility</h2>

        <div class="alert alert-warning">
            <strong>Warning:</strong> You are about to delete the facility:
            <span class="fw-bold text-danger">@Model.Name</span>. This action cannot be undone.
        </div>

        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="d-flex justify-content-start gap-2">
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash me-1"></i> Yes, Delete
                </button>
                <a asp-action="All" class="btn btn-secondary">
                    <i class="bi bi-x-circle"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
