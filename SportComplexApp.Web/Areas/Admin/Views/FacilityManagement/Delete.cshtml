@using SportComplexApp.Web.ViewModels.Facility
@model DeleteFacilityViewModel

<h2>Delete Facility</h2>

<p>Are you sure you want to delete <strong>@Model.Name</strong>?</p>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Yes, delete</button>
    <a asp-action="All" class="btn btn-secondary">Cancel</a>
</form>
