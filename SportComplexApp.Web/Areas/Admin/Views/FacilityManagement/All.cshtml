@using SportComplexApp.Web.ViewModels.Facility
@model IEnumerable<AllFacilitiesViewModel>

@{
    ViewData["Title"] = "Manage Facilities";
}

<div class="d-flex align-items-center justify-content-between mb-4">
    <h2 class="mb-0">Manage Facilities</h2>
    <a asp-action="Add" class="btn btn-success">
        <i class="bi bi-plus-circle me-1"></i> Add Facility
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle-fill me-2"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (!Model.Any())
{
    <div class="card shadow-sm text-center p-5 bg-light-subtle">
        <div class="display-6 mb-2">🏛️</div>
        <h5 class="mb-1">No facilities available</h5>
        <p class="text-muted mb-3">Add your first facility to get started.</p>
        <a asp-action="Add" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add Facility
        </a>
    </div>
}
else
{
    <div class="row g-4 row-cols-1 row-cols-sm-2 row-cols-lg-3 row-cols-xl-4">
        @foreach (var f in Model)
        {
            var imageProp = f.GetType().GetProperty("ImageUrl");
            var imageUrl = imageProp?.GetValue(f)?.ToString();

            <div class="col">
                <div class="card facility-card h-100 shadow-sm border-0">
                    @if (!string.IsNullOrWhiteSpace(imageUrl))
                    {
                        <div class="facility-cover ratio ratio-16x9" style="background-image:url('@imageUrl');"></div>
                    }
                    else
                    {
                        <div class="facility-cover ratio ratio-16x9 facility-cover--placeholder d-flex align-items-center justify-content-center">
                            <i class="bi bi-building display-6 text-white-50"></i>
                        </div>
                    }

                    <div class="card-body d-flex flex-column">
                        <div class="d-flex align-items-start justify-content-between mb-2">
                            <h5 class="card-title mb-0">@f.Name</h5>
                            <span class="badge bg-info text-dark">
                                <i class="bi bi-basket"></i> @f.SportCount
                            </span>
                        </div>

                        <div class="mt-auto d-flex gap-2">
                            <a asp-action="Edit" asp-route-id="@f.Id" class="btn btn-outline-warning btn-sm">
                                <i class="bi bi-pencil-fill"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@f.Id" class="btn btn-outline-danger btn-sm">
                                <i class="bi bi-trash3-fill"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <style>
        .facility-card {
            transition: transform .15s ease, box-shadow .15s ease;
            border-radius: 1rem;
        }

            .facility-card:hover {
                transform: translateY(-3px);
                box-shadow: 0 .75rem 1.5rem rgba(0,0,0,.1);
            }

        .facility-cover {
            background-size: cover;
            background-position: center;
            border-top-left-radius: 1rem;
            border-top-right-radius: 1rem;
        }

        .facility-cover--placeholder {
            background: linear-gradient(135deg, #43e97b, #38f9d7);
        }

        .card-title {
            line-height: 1.2;
        }
    </style>
}
