@using SportComplexApp.Web.ViewModels.Facility
@model AddFacilityViewModel

@{
    ViewData["Title"] = "Add Facility";
}

<div class="d-flex align-items-center justify-content-between mb-4">
    <h2 class="mb-0" style="color:#00ffc8;">Add New Facility</h2>
    <a asp-action="All" class="btn btn-outline-neon">
        <i class="bi bi-arrow-left-circle me-1"></i> Back
    </a>
</div>

@if (TempData["errorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["errorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card card-dark shadow-lg border-0 rounded-4">
    <div class="card-body p-4">
        <form asp-action="Add" method="post" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Name" class="form-label text-light">Facility Name</label>
                <div class="input-group neon-input">
                    <span class="input-group-text neon-icon"><i class="bi bi-building"></i></span>
                    <input asp-for="Name" class="form-control" placeholder="e.g. Main Arena, Court A..." />
                </div>
                <span asp-validation-for="Name" class="text-danger small"></span>
            </div>

            <div class="d-flex justify-content-end gap-2 mt-3">
                <button type="submit" class="btn btn-neon">
                    <i class="bi bi-check-circle me-1"></i> Create
                </button>
                <a asp-action="All" class="btn btn-outline-neon">
                    <i class="bi bi-arrow-left-circle me-1"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
}
