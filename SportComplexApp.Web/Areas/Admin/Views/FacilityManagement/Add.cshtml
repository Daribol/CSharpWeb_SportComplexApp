@using SportComplexApp.Web.ViewModels.Facility
@model AddFacilityViewModel

@{
    ViewData["Title"] = "Add Facility";
}

<h2 class="mb-4 text-center">Add New Facility</h2>

@if (TempData["errorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["errorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card shadow-sm border-0">
    <div class="card-body">
        <form asp-action="Add" method="post" class="needs-validation" novalidate>
            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-check-circle me-1"></i> Create
                </button>
                <a asp-action="All" class="btn btn-secondary">
                    <i class="bi bi-arrow-left-circle me-1"></i> Back
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
