@using SportComplexApp.Web.ViewModels.Admin
@model IEnumerable<AllUsersViewModel>

@{
    ViewData["Title"] = "User Management";
}

<div class="d-flex align-items-center justify-content-between mb-4">
    <h2 class="mb-0">User Management</h2>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (!Model.Any())
{
    <div class="card shadow-sm text-center p-5 bg-light-subtle">
        <div class="display-6 mb-2">👥</div>
        <h5 class="mb-1">There are no users registered</h5>
    </div>
}
else
{
    <div class="row g-4 row-cols-1 row-cols-md-2 row-cols-lg-3">
        @foreach (var user in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm border-0 user-card">
                    <div class="card-body d-flex flex-column">
                        <div class="mb-3">
                            <h5 class="card-title mb-1">
                                <i class="bi bi-envelope"></i> @user.Email
                            </h5>
                            <p class="text-muted mb-2">
                                <i class="bi bi-person"></i> @user.FirstName @user.LastName
                            </p>

                            <div>
                                @if (user.Roles.Any())
                                {
                                    @foreach (var role in user.Roles)
                                    {
                                        string badgeClass;
                                        string icon;

                                        switch (role)
                                        {
                                            case "Admin":
                                                badgeClass = "bg-danger";
                                                icon = "<i class='bi bi-shield-lock'></i>";
                                                break;
                                            case "Client":
                                                badgeClass = "bg-primary";
                                                icon = "<i class='bi bi-person'></i>";
                                                break;
                                            case "Trainer":
                                                badgeClass = "bg-warning text-dark";
                                                icon = "<i class='bi bi-star'></i>";
                                                break;
                                            default:
                                                badgeClass = "bg-secondary";
                                                icon = "<i class='bi bi-question-circle'></i>";
                                                break;
                                        }

                                        @:<span class="badge @badgeClass me-1 mb-1">@Html.Raw(icon) @role</span>
                                    }
                                }
                                else
                                {
                                    <span class="text-muted">No roles</span>
                                }
                            </div>
                        </div>

                        <div class="mt-auto">
                            <div class="mb-2">
                                <form asp-action="AssignRole" method="post" class="d-flex gap-2">
                                    <input type="hidden" name="userId" value="@user.Id" />
                                    <select name="role" class="form-select form-select-sm">
                                        <option value="Admin">Admin</option>
                                        <option value="Client">Client</option>
                                        <option value="Trainer">Trainer</option>
                                    </select>
                                    <button type="submit" class="btn btn-success btn-sm">
                                        Assign
                                    </button>
                                </form>
                            </div>

                            @if (user.Roles.Any())
                            {
                                <div class="mb-2">
                                    <form asp-action="RemoveRole" method="post" class="d-flex gap-2">
                                        <input type="hidden" name="userId" value="@user.Id" />
                                        <select name="role" class="form-select form-select-sm">
                                            @foreach (var role in user.Roles)
                                            {
                                                <option value="@role">@role</option>
                                            }
                                        </select>
                                        <button type="submit" class="btn btn-warning btn-sm">
                                            Remove
                                        </button>
                                    </form>
                                </div>
                            }

                            <form asp-action="DeleteUser" method="post" onsubmit="return confirm('Are you sure you want to delete this user?');" class="d-grid">
                                <input type="hidden" name="userId" value="@user.Id" />
                                <button type="submit" class="btn btn-danger btn-sm">
                                    Delete
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <style>
        .user-card {
            border-radius: 1rem;
            transition: transform .15s ease, box-shadow .15s ease;
        }

            .user-card:hover {
                transform: translateY(-3px);
                box-shadow: 0 .75rem 1.5rem rgba(0,0,0,.1);
            }
    </style>
}
