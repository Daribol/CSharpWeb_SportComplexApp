@using SportComplexApp.Web.ViewModels.Admin
@model IEnumerable<AllUsersViewModel>

@{
    ViewData["Title"] = "User Management";
}

<div class="d-flex align-items-center justify-content-between mb-4">
    <h2 class="mb-0" style="color:#00ffc8;">User Management</h2>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (!Model.Any())
{
    <div class="card card-dark text-center p-5 rounded-4 border-0">
        <div class="display-6 mb-2">👥</div>
        <h5 class="mb-1 text-light">There are no users registered</h5>
        <p class="text-light-50 mb-0">Users will appear here once they sign up.</p>
    </div>
}
else
{
    <div class="row g-4 row-cols-1 row-cols-md-2 row-cols-lg-3">
        @foreach (var user in Model)
        {
            <div class="col">
                <div class="card card-dark hover h-100 border-0 rounded-4 user-card">
                    <!-- Cover / avatar placeholder -->
                    <div class="cover cover--placeholder ratio ratio-21x9 d-flex align-items-center justify-content-center">
                        <i class="bi bi-person-circle display-5 text-light-50"></i>
                    </div>

                    <div class="card-body d-flex flex-column">
                        <!-- Header: Email + Name -->
                        <div class="mb-2">
                            <h5 class="card-title mb-1 text-white">
                                <i class="bi bi-envelope me-1"></i>@user.Email
                            </h5>
                            <p class="text-light-50 mb-0">
                                <i class="bi bi-person me-1"></i>@user.FirstName @user.LastName
                            </p>
                        </div>

                        <!-- Roles -->
                        <div class="my-3">
                            @if (user.Roles != null && user.Roles.Any())
                            {
                                @foreach (var role in user.Roles)
                                {
                                    var badgeClass = role switch
                                    {
                                        "Admin" => "bg-danger",
                                        "Trainer" => "bg-warning text-dark",
                                        "Client" => "badge-sport",
                                        _ => "badge-soft"
                                    };
                                    var iconHtml = role switch
                                    {
                                        "Admin" => "<i class='bi bi-shield-lock'></i>",
                                        "Trainer" => "<i class='bi bi-star'></i>",
                                        "Client" => "<i class='bi bi-person'></i>",
                                        _ => "<i class='bi bi-question-circle'></i>"
                                    };
                                    @:<span class="badge @badgeClass me-1 mb-1">@Html.Raw(iconHtml) @role</span>
                                }
                            }
                            else
                            {
                                <span class="text-light-50">No roles</span>
                            }
                        </div>

                        <!-- Actions -->
                        <div class="mt-auto">
                            <!-- Assign -->
                            <form asp-action="AssignRole" method="post" class="d-flex gap-2 mb-2">
                                <input type="hidden" name="userId" value="@user.Id" />
                                <select name="role" class="form-select form-select-sm">
                                    <option value="Admin">Admin</option>
                                    <option value="Client">Client</option>
                                    <option value="Trainer">Trainer</option>
                                </select>
                                <button type="submit" class="btn btn-outline-neon btn-sm">
                                    Assign
                                </button>
                            </form>

                            <!-- Remove (only if has roles) -->
                            @if (user.Roles != null && user.Roles.Any())
                            {
                                <form asp-action="RemoveRole" method="post" class="d-flex gap-2 mb-2">
                                    <input type="hidden" name="userId" value="@user.Id" />
                                    <select name="role" class="form-select form-select-sm">
                                        @foreach (var role in user.Roles)
                                        {
                                            <option value="@role">@role</option>
                                        }
                                    </select>
                                    <button type="submit" class="btn btn-outline-neon btn-sm">
                                        Remove
                                    </button>
                                </form>
                            }

                            <!-- Delete -->
                            <form asp-action="DeleteUser" method="post" onsubmit="return confirm('Are you sure you want to delete this user?');" class="d-grid">
                                <input type="hidden" name="userId" value="@user.Id" />
                                <button type="submit" class="btn btn-outline-neon btn-sm">
                                    <i class="bi bi-trash3 me-1"></i> Delete
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
}
