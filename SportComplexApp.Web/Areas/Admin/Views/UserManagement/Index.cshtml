@using SportComplexApp.Web.ViewModels.Admin
@model IEnumerable<AllUsersViewModel>

@{
    ViewData["Title"] = "User Management";
}

<h2>User Management</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Email</th>
            <th>Full Name</th>
            <th>Roles</th>
            <th>Assign Role</th>
            <th>Remove Role</th>
            <th>Delete User</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>@($"{user.FirstName} {user.LastName}")</td>
                <td>@string.Join(", ", user.Roles)</td>
                <td>
                    <form asp-action="AssignRole" method="post">
                        <input type="hidden" name="userId" value="@user.Id" />
                        <select name="role" class="form-control form-select mb-1">
                            <option value="Admin">Admin</option>
                            <option value="User">User</option>
                        </select>
                        <button type="submit" class="btn btn-sm btn-success">Assign</button>
                    </form>
                </td>
                <td>
                    <form asp-action="RemoveRole" method="post">
                        <input type="hidden" name="userId" value="@user.Id" />
                        <select name="role" class="form-control form-select mb-1">
                            @foreach (var role in user.Roles)
                            {
                                <option value="@role">@role</option>
                            }
                        </select>
                        <button type="submit" class="btn btn-sm btn-warning">Remove</button>
                    </form>
                </td>
                <td>
                    <form asp-action="DeleteUser" method="post" onsubmit="return confirm('Are you sure you want to delete this user?');">
                        <input type="hidden" name="userId" value="@user.Id" />
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
