@model IEnumerable<SportComplexApp.Web.ViewModels.Tournament.TournamentViewModel>

@{
    ViewData["Title"] = "Manage Tournaments";
}

<div class="container">
    <h2 class="mb-4 text-center">Manage Tournaments</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="d-flex justify-content-end mb-3">
        <a asp-action="Add" class="btn btn-success mb-4">
            <i class="bi bi-plus-circle"></i> Create Tournament
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">No tournaments available at the moment.</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-bordered table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Name</th>
                        <th>Sport</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var t in Model)
                    {
                        <tr>
                            <td>@t.Name</td>
                            <td>@t.Sport</td>
                            <td>@t.StartDate.ToString("dd MMM yyyy")</td>
                            <td>@t.EndDate.ToString("dd MMM yyyy")</td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@t.Id" class="btn btn-outline-warning btn-sm me-2">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-action="Delete" asp-route-id="@t.Id" class="btn btn-outline-danger btn-sm">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
