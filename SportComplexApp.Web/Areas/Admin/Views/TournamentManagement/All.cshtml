@model IEnumerable<SportComplexApp.Web.ViewModels.Tournament.TournamentViewModel>
@using System
@using System.Linq

@{
    ViewData["Title"] = "Manage Tournaments";
}

<div class="d-flex align-items-center justify-content-between mb-4">
    <h2 class="mb-0">Manage Tournaments</h2>
    <a asp-action="Add" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Create Tournament
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (!Model.Any())
{
    <div class="card shadow-sm text-center p-5 bg-light-subtle">
        <div class="display-6 mb-2">🏆</div>
        <h5 class="mb-1">No tournaments available</h5>
        <p class="text-muted mb-3">Create your first tournament to get started.</p>
        <a asp-action="Add" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create Tournament
        </a>
    </div>
}
else
{
    <div class="row g-4 row-cols-1 row-cols-sm-2 row-cols-lg-3 row-cols-xl-4">
        @foreach (var t in Model)
        {
            var now = DateTime.Now;
            var status = t.EndDate < now ? "Finished" : (t.StartDate > now ? "Upcoming" : "Ongoing");
            var durationDays = Math.Max(1, (t.EndDate.Date - t.StartDate.Date).Days + 1);

            <div class="col">
                <div class="card tournament-card h-100 shadow-sm border-0">

                    @{
                        var imageProp = t.GetType().GetProperty("ImageUrl");
                        var imageUrl = imageProp?.GetValue(t)?.ToString();
                    }
                    @if (!string.IsNullOrWhiteSpace(imageUrl))
                    {
                        <div class="tournament-cover ratio ratio-16x9" style="background-image:url('@imageUrl');"></div>
                    }
                    else
                    {
                        <div class="tournament-cover ratio ratio-16x9 tournament-cover--placeholder d-flex align-items-center justify-content-center">
                            <i class="bi bi-trophy-fill display-6 text-white-50"></i>
                        </div>
                    }

                    <div class="card-body d-flex flex-column">
                        <div class="d-flex align-items-start justify-content-between mb-2">
                            <h5 class="card-title mb-0">@t.Name</h5>
                            <span class="badge @(
                                status == "Upcoming" ? "bg-info text-dark" :
                                status == "Ongoing"  ? "bg-success"       :
                                                        "bg-secondary"
                            )">@status</span>
                        </div>

                        <div class="mb-2">
                            <span class="badge sport-gradient me-1">@t.Sport</span>
                            <span class="badge bg-light text-muted border">@durationDays d</span>
                        </div>

                        <ul class="list-unstyled small text-muted mb-3">
                            <li><i class="bi bi-calendar-event text-primary"></i> @t.StartDate.ToString("dd MMM yyyy") → @t.EndDate.ToString("dd MMM yyyy")</li>
                        </ul>

                        <div class="mt-auto d-flex gap-2">
                            <a asp-action="Edit" asp-route-id="@t.Id" class="btn btn-outline-warning btn-sm">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@t.Id" class="btn btn-outline-danger btn-sm">
                                <i class="bi bi-trash3"></i> Delete
                            </a>
                        </div>
                    </div>

                </div>
            </div>
        }
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <style>
        .tournament-card {
            transition: transform .15s ease, box-shadow .15s ease;
            border-radius: 1rem;
        }

            .tournament-card:hover {
                transform: translateY(-3px);
                box-shadow: 0 .75rem 1.5rem rgba(0,0,0,.1);
            }

        .tournament-cover {
            background-size: cover;
            background-position: center;
            border-top-left-radius: 1rem;
            border-top-right-radius: 1rem;
        }

        .tournament-cover--placeholder {
            background: linear-gradient(135deg, #4facfe, #00f2fe);
        }

        /* Пастелен градиент за спорта – същия стил като при треньори/спортове */
        .sport-gradient {
            background: linear-gradient(135deg, #4facfe, #00f2fe);
            color: #fff;
            font-weight: 500;
            box-shadow: 0 2px 6px rgba(0,0,0,.15);
            border-radius: 50rem;
        }
    </style>
}
