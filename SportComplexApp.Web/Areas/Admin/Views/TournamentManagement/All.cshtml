@model IEnumerable<SportComplexApp.Web.ViewModels.Tournament.TournamentViewModel>
@using System

@{
    ViewData["Title"] = "Manage Tournaments";
    var now = DateTime.Now;
}

<div class="d-flex align-items-center justify-content-between mb-4">
    <h2 class="mb-0" style="color:#00ffc8;">Manage Tournaments</h2>
    <a asp-action="Add" class="btn btn-neon">
        <i class="bi bi-plus-circle me-1"></i> Create Tournament
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (!Model.Any())
{
    <div class="card card-dark text-center p-5 rounded-4 border-0">
        <div class="display-6 mb-2">🏆</div>
        <h5 class="mb-1 text-light">No tournaments available</h5>
        <p class="text-light-50 mb-3">Create your first tournament to get started.</p>
        <a asp-action="Add" class="btn btn-neon">
            <i class="bi bi-plus-circle"></i> Create Tournament
        </a>
    </div>
}
else
{
    <div class="row g-4 row-cols-1 row-cols-sm-2 row-cols-lg-3 row-cols-xl-4">
        @foreach (var t in Model)
        {
            var status = t.EndDate < now ? "Finished" : (t.StartDate > now ? "Upcoming" : "Ongoing");
            var durationDays = Math.Max(1, (t.EndDate.Date - t.StartDate.Date).Days + 1);

            // опция за ImageUrl през reflection, ако свойството е динамично
            var imageProp = t.GetType().GetProperty("ImageUrl");
            var imageUrl = imageProp?.GetValue(t)?.ToString();

            <div class="col">
                <div class="card card-dark hover h-100 border-0">
                    @if (!string.IsNullOrWhiteSpace(imageUrl))
                    {
                        <div class="cover ratio ratio-16x9" style="background-image:url('@imageUrl');"></div>
                    }
                    else
                    {
                        <div class="cover cover--placeholder ratio ratio-16x9 d-flex align-items-center justify-content-center">
                            <i class="bi bi-trophy-fill display-6 text-light-50"></i>
                        </div>
                    }

                    <div class="card-body d-flex flex-column">
                        <div class="d-flex align-items-start justify-content-between mb-2">
                            <h5 class="card-title mb-0 text-white clamp-3">@t.Name</h5>

                            @if (status == "Upcoming")
                            {
                                <span class="badge badge-sport">
                                    <i class="bi bi-hourglass-split me-1"></i> Upcoming
                                </span>
                            }
                            else if (status == "Ongoing")
                            {
                                <span class="badge bg-success">
                                    <i class="bi bi-activity me-1"></i> Ongoing
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">
                                    <i class="bi bi-check2-circle me-1"></i> Finished
                                </span>
                            }
                        </div>

                        <div class="mb-2">
                            <span class="badge badge-sport me-1">@t.Sport</span>
                            <span class="badge badge-soft">@durationDays d</span>
                        </div>

                        <ul class="list-unstyled small text-muted mb-3">
                            <li>
                                <i class="bi bi-calendar-event text-primary"></i>
                                @t.StartDate.ToString("dd MMM yyyy") → @t.EndDate.ToString("dd MMM yyyy")
                            </li>
                        </ul>
                        
                         <p class="text-light-50 clamp-3 mb-3">@t.Description</p> 

                        <div class="mt-auto d-flex gap-2">
                            <a asp-action="Edit" asp-route-id="@t.Id" class="btn btn-outline-neon btn-sm">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@t.Id" class="btn btn-outline-neon btn-sm">
                                <i class="bi bi-trash3"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
}
