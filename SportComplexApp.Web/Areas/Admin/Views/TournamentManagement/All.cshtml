@model IEnumerable<SportComplexApp.Web.ViewModels.Tournament.TournamentViewModel>

@{
    ViewData["Title"] = "Manage Tournaments";
}

<h2>Manage Tournaments</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<a asp-action="Add" class="btn btn-success mb-3">Add Tournament</a>

@if
 (!Model.Any())
{
    <div class="alert alert-info">No sports available.</div>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Sport</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Description</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var t in Model)
            {
                <tr>
                    <td>@t.Name</td>
                    <td>@t.Sport</td>
                    <td>@t.StartDate.ToShortDateString()</td>
                    <td>@t.EndDate.ToShortDateString()</td>
                    <td>@t.Description</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@t.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@t.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}