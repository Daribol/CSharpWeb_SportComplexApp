@model SportComplexApp.Web.ViewModels.Tournament.DeleteTournamentViewModel

@{
    ViewData["Title"] = "Delete Tournament";
}

<div class="card border-danger shadow-sm mb-4">
    <div class="card-body">
        <h2 class="mb-4 text-danger">Confirm Tournament Deletion</h2>
        <div class="alert alert-warning shadow-sm">
            <h5 class="mb-2"><i class="bi bi-exclamation-triangle-fill"></i> Warning!</h5>
            Are you sure you want to delete the tournament:
            <strong class="text-danger">@Model.Name</strong>, Sport: <strong class="text-danger">@Model.Sport</strong>?
            <br/>
            This action cannot be undone.
        </div>

        <form asp-action="DeleteConfirmed" method="post" class="d-flex gap-3">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Yes, Delete
            </button>
            <a asp-action="All" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle"></i> Cancel
            </a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
