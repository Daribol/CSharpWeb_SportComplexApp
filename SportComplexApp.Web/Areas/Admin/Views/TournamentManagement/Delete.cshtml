@model SportComplexApp.Web.ViewModels.Tournament.DeleteTournamentViewModel

@{
    ViewData["Title"] = "Delete Tournament";
}

<div class="card card-dark shadow-lg border-0 rounded-4 mb-4">
    <div class="card-body p-4 p-md-5">
        <h2 class="mb-3" style="color:#ff4d4d;">
            <i class="bi bi-exclamation-triangle-fill me-2"></i> Delete Tournament
        </h2>

        <div class="alert alert-dark border border-warning d-flex align-items-start gap-2 mb-4">
            <i class="bi bi-exclamation-circle-fill text-warning mt-1"></i>
            <div>
                <strong class="text-warning">Are you sure?</strong><br />
                This action will permanently delete tournament:
                <span class="fw-bold" style="color:#ff6b6b;">@Model.Name</span>
                @if (!string.IsNullOrWhiteSpace(Model.Sport))
                {
                    @: (Sport: <span class="fw-semibold text-light">@Model.Sport</span>)
                }
                <br />
                This cannot be undone.
            </div>
        </div>

        <form asp-action="DeleteConfirmed" method="post" class="mt-2 d-flex gap-2">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash3 me-1"></i> Delete
            </button>
            <a asp-action="All" class="btn btn-outline-neon">
                <i class="bi bi-x-circle me-1"></i> Cancel
            </a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
}