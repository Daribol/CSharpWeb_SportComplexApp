@model SportComplexApp.Web.ViewModels.Tournament.AddTournamentViewModel

@{
    ViewData["Title"] = "Add Tournament";
}

<div class="container mt-4">
    <h2 class="mb-4">Add New Tournament</h2>

    @if (TempData["errorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["errorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <form asp-action="Add" method="post" class="shadow-sm p-4 bg-light rounded">
        <div class="mb-3">
            <label asp-for="Name" class="form-label">Tournament Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label asp-for="SportId" class="form-label">Sport</label>
            <select asp-for="SportId" asp-items="Model.Sports" class="form-select">
                <option value="">-- Select Sport --</option>
            </select>
            <span asp-validation-for="SportId" class="text-danger small"></span>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="StartDate" class="form-label">Start Date</label>
                <input asp-for="StartDate" type="date" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger small"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="EndDate" class="form-label">End Date</label>
                <input asp-for="EndDate" type="date" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger small"></span>
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label">Description</label>
            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
            <span asp-validation-for="Description" class="text-danger small"></span>
        </div>

        <div class="mt-4 d-flex justify-content-end">
            <button type="submit" class="btn btn-success me-2">
                <i class="bi bi-plus-circle"></i> Create Tournament
            </button>
            <a asp-action="All" class="btn btn-secondary">
                <i class="bi bi-x-circle"></i> Cancel
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
