@{
    ViewData["Title"] = "Admin Dashboard";
}

<h2 class="mb-4">Admin Panel</h2>

<div class="row">
    <div class="col-md-4 mb-3">
        <a asp-area="Admin" asp-controller="UserManagement" asp-action="Index" class="btn btn-primary w-100">
            👤 Manage Users
        </a>
    </div>
    <div class="col-md-4 mb-3">
        <a asp-area="Admin" asp-controller="TrainerManagement" asp-action="All" class="btn btn-secondary w-100">
            🏋️ Manage Trainers
        </a>
    </div>
    <div class="col-md-4 mb-3">
        <a asp-area="Admin" asp-controller="SportManagement" asp-action="Index" class="btn btn-success w-100">
            🏀 Manage Sports
        </a>
    </div>
    <div class="col-md-4 mb-3">
        <a asp-area="Admin" asp-controller="FacilityManagement" asp-action="Index" class="btn btn-warning w-100">
            🏛️ Manage Facilities
        </a>
    </div>
    <div class="col-md-4 mb-3">
        <a asp-area="Admin" asp-controller="SpaServicesManagement" asp-action="Index" class="btn btn-info w-100">
            💆 Manage Spa Services
        </a>
    </div>
    <div class="col-md-4 mb-3">
        <a asp-area="Admin" asp-controller="TournamentManagement" asp-action="Index" class="btn btn-danger w-100">
            🏆 Manage Tournaments
        </a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}