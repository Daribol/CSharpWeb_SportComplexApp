@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="admin-hero rounded-4 p-4 p-md-5 mb-5">
    <div class="d-flex align-items-center gap-3">
        <div class="hero-icon d-flex align-items-center justify-content-center rounded-3">
            <i class="bi bi-speedometer2"></i>
        </div>
        <div>
            <h1 class="h3 mb-1 text-white">Admin Panel</h1>
            <p class="mb-0 text-white-50">Manage users, trainers, sports, facilities, spa services & tournaments</p>
        </div>
    </div>
</div>

<div class="row g-4">
    <div class="col-12 col-md-6 col-xl-4">
        <a asp-area="Admin" asp-controller="UserManagement" asp-action="Index" class="text-decoration-none">
            <div class="card action-card shadow-lg border-0 gradient-primary h-100 overflow-hidden">
                <div class="card-img-overlay bg-overlay"></div>
                <div class="card-body p-4 d-flex flex-column justify-content-between" style="min-height: 180px;">
                    <div>
                        <h3 class="h4 text-white mb-2">Manage Users</h3>
                        <p class="mb-0 text-white-50">Create, edit, deactivate accounts</p>
                    </div>
                    <span class="action-icon text-white-75"><i class="bi bi-people-fill"></i></span>
                </div>
            </div>
        </a>
    </div>

    <div class="col-12 col-md-6 col-xl-4">
        <a asp-area="Admin" asp-controller="TrainerManagement" asp-action="All" class="text-decoration-none">
            <div class="card action-card shadow-lg border-0 gradient-secondary h-100 overflow-hidden">
                <div class="card-img-overlay bg-overlay"></div>
                <div class="card-body p-4 d-flex flex-column justify-content-between" style="min-height: 180px;">
                    <div>
                        <h3 class="h4 text-white mb-2">Manage Trainers</h3>
                        <p class="mb-0 text-white-50">Profiles, schedules, approvals</p>
                    </div>
                    <span class="action-icon text-white-75"><i class="bi bi-person-badge-fill"></i></span>
                </div>
            </div>
        </a>
    </div>

    <div class="col-12 col-md-6 col-xl-4">
        <a asp-area="Admin" asp-controller="SportManagement" asp-action="All" class="text-decoration-none">
            <div class="card action-card shadow-lg border-0 gradient-success h-100 overflow-hidden">
                <div class="card-img-overlay bg-overlay"></div>
                <div class="card-body p-4 d-flex flex-column justify-content-between" style="min-height: 180px;">
                    <div>
                        <h3 class="h4 text-white mb-2">Manage Sports</h3>
                        <p class="mb-0 text-white-50">Categories, levels, pricing</p>
                    </div>
                    <span class="action-icon text-white-75"><i class="bi bi-basket2-fill"></i></span>
                </div>
            </div>
        </a>
    </div>

    <div class="col-12 col-md-6 col-xl-4">
        <a asp-area="Admin" asp-controller="FacilityManagement" asp-action="All" class="text-decoration-none">
            <div class="card action-card shadow-lg border-0 gradient-warning h-100 overflow-hidden">
                <div class="card-img-overlay bg-overlay"></div>
                <div class="card-body p-4 d-flex flex-column justify-content-between" style="min-height: 180px;">
                    <div>
                        <h3 class="h4 text-white mb-2">Manage Facilities</h3>
                        <p class="mb-0 text-white-50">Courts, rooms, availability</p>
                    </div>
                    <span class="action-icon text-white-75"><i class="bi bi-building"></i></span>
                </div>
            </div>
        </a>
    </div>

    <div class="col-12 col-md-6 col-xl-4">
        <a asp-area="Admin" asp-controller="SpaServicesManagement" asp-action="All" class="text-decoration-none">
            <div class="card action-card shadow-lg border-0 gradient-info h-100 overflow-hidden">
                <div class="card-img-overlay bg-overlay"></div>
                <div class="card-body p-4 d-flex flex-column justify-content-between" style="min-height: 180px;">
                    <div>
                        <h3 class="h4 text-white mb-2">Manage Spa Services</h3>
                        <p class="mb-0 text-white-50">Treatments, durations, staff</p>
                    </div>
                    <span class="action-icon text-white-75"><i class="bi bi-flower3"></i></span>
                </div>
            </div>
        </a>
    </div>

    <div class="col-12 col-md-6 col-xl-4">
        <a asp-area="Admin" asp-controller="TournamentManagement" asp-action="All" class="text-decoration-none">
            <div class="card action-card shadow-lg border-0 gradient-danger h-100 overflow-hidden">
                <div class="card-img-overlay bg-overlay"></div>
                <div class="card-body p-4 d-flex flex-column justify-content-between" style="min-height: 180px;">
                    <div>
                        <h3 class="h4 text-white mb-2">Manage Tournaments</h3>
                        <p class="mb-0 text-white-50">Brackets, dates, registrations</p>
                    </div>
                    <span class="action-icon text-white-75"><i class="bi bi-trophy-fill"></i></span>
                </div>
            </div>
        </a>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <style>
        .admin-hero {
            background: radial-gradient(1200px 400px at -10% -10%, rgba(13,110,253,.25), transparent 60%), radial-gradient(800px 300px at 110% 10%, rgba(32,201,151,.2), transparent 60%), linear-gradient(135deg, #0d6efd, #6610f2);
        }

        .hero-icon {
            width: 60px;
            height: 60px;
            background: rgba(255,255,255,.15);
            color: #fff;
            font-size: 1.5rem;
        }

        .action-card {
            position: relative;
            border-radius: 1rem;
            transition: transform .2s ease, box-shadow .2s ease;
            background-size: cover;
            background-position: center;
        }

            .action-card:hover {
                transform: translateY(-4px) scale(1.02);
                box-shadow: 0 1rem 2rem rgba(0,0,0,.15);
            }

            .action-card .card-body {
                z-index: 2;
                position: relative;
            }

        .bg-overlay {
            position: absolute;
            inset: 0;
            background: rgba(0,0,0,0.15);
            z-index: 1;
        }

        .action-icon {
            font-size: 2rem;
        }

        .gradient-primary {
            background: linear-gradient(135deg, #0d6efd, #3f7afe);
        }

        .gradient-secondary {
            background: linear-gradient(135deg, #6c757d, #8d99a7);
        }

        .gradient-success {
            background: linear-gradient(135deg, #198754, #34c38f);
        }

        .gradient-warning {
            background: linear-gradient(135deg, #ffc107, #ffb020);
        }

        .gradient-info {
            background: linear-gradient(135deg, #0dcaf0, #47d1ff);
        }

        .gradient-danger {
            background: linear-gradient(135deg, #dc3545, #f06575);
        }

            .gradient-primary .card-body,
            .gradient-secondary .card-body,
            .gradient-success .card-body,
            .gradient-warning .card-body,
            .gradient-info .card-body,
            .gradient-danger .card-body {
                color: #fff;
            }

        .text-white-50 {
            color: rgba(255,255,255,.75) !important;
        }

        .text-white-75 {
            color: rgba(255,255,255,.9) !important;
        }
    </style>
}
