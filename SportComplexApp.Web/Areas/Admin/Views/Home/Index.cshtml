@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="admin-hero rounded-4 p-4 p-md-5 mb-5">
    <div class="d-flex align-items-center gap-3">
        <div class="hero-icon d-flex align-items-center justify-content-center rounded-3">
            <i class="bi bi-speedometer2"></i>
        </div>
        <div>
            <h1 class="h3 mb-1 text-white">Admin Panel</h1>
            <p class="mb-0 text-white-50">Manage users, trainers, sports, facilities, spa services & tournaments</p>
        </div>
    </div>
</div>

<div class="row g-4">
    @* Users *@
    <div class="col-12 col-md-6 col-xl-4">
        <a asp-area="Admin" asp-controller="UserManagement" asp-action="Index" class="text-decoration-none">
            <div class="card admin-card h-100">
                <div class="card-body p-4 d-flex flex-column justify-content-between">
                    <div class="d-flex align-items-start gap-3">
                        <div class="pill-icon">
                            <i class="bi bi-people-fill"></i>
                        </div>
                        <div>
                            <h3 class="h5 text-white mb-1">Manage Users</h3>
                            <p class="mb-0 text-white-50 small">Create, edit, deactivate accounts</p>
                        </div>
                    </div>
                </div>
            </div>
        </a>
    </div>

    @* Trainers *@
    <div class="col-12 col-md-6 col-xl-4">
        <a asp-area="Admin" asp-controller="TrainerManagement" asp-action="All" class="text-decoration-none">
            <div class="card admin-card h-100">
                <div class="card-body p-4 d-flex flex-column justify-content-between">
                    <div class="d-flex align-items-start gap-3">
                        <div class="pill-icon">
                            <i class="bi bi-person-badge-fill"></i>
                        </div>
                        <div>
                            <h3 class="h5 text-white mb-1">Manage Trainers</h3>
                            <p class="mb-0 text-white-50 small">Profiles, schedules, approvals</p>
                        </div>
                    </div>
                </div>
            </div>
        </a>
    </div>

    @* Sports *@
    <div class="col-12 col-md-6 col-xl-4">
        <a asp-area="Admin" asp-controller="SportManagement" asp-action="All" class="text-decoration-none">
            <div class="card admin-card h-100">
                <div class="card-body p-4 d-flex flex-column justify-content-between">
                    <div class="d-flex align-items-start gap-3">
                        <div class="pill-icon">
                            <i class="bi bi-basket2-fill"></i>
                        </div>
                        <div>
                            <h3 class="h5 text-white mb-1">Manage Sports</h3>
                            <p class="mb-0 text-white-50 small">Categories, levels, pricing</p>
                        </div>
                    </div>
                </div>
            </div>
        </a>
    </div>

    @* Facilities *@
    <div class="col-12 col-md-6 col-xl-4">
        <a asp-area="Admin" asp-controller="FacilityManagement" asp-action="All" class="text-decoration-none">
            <div class="card admin-card h-100">
                <div class="card-body p-4 d-flex flex-column justify-content-between">
                    <div class="d-flex align-items-start gap-3">
                        <div class="pill-icon">
                            <i class="bi bi-building"></i>
                        </div>
                        <div>
                            <h3 class="h5 text-white mb-1">Manage Facilities</h3>
                            <p class="mb-0 text-white-50 small">Courts, rooms, availability</p>
                        </div>
                    </div>
                </div>
            </div>
        </a>
    </div>

    @* Spa *@
    <div class="col-12 col-md-6 col-xl-4">
        <a asp-area="Admin" asp-controller="SpaServicesManagement" asp-action="All" class="text-decoration-none">
            <div class="card admin-card h-100">
                <div class="card-body p-4 d-flex flex-column justify-content-between">
                    <div class="d-flex align-items-start gap-3">
                        <div class="pill-icon">
                            <i class="bi bi-flower3"></i>
                        </div>
                        <div>
                            <h3 class="h5 text-white mb-1">Manage Spa Services</h3>
                            <p class="mb-0 text-white-50 small">Treatments, durations, staff</p>
                        </div>
                    </div>
                </div>
            </div>
        </a>
    </div>

    @* Tournaments *@
    <div class="col-12 col-md-6 col-xl-4">
        <a asp-area="Admin" asp-controller="TournamentManagement" asp-action="All" class="text-decoration-none">
            <div class="card admin-card h-100">
                <div class="card-body p-4 d-flex flex-column justify-content-between">
                    <div class="d-flex align-items-start gap-3">
                        <div class="pill-icon">
                            <i class="bi bi-trophy-fill"></i>
                        </div>
                        <div>
                            <h3 class="h5 text-white mb-1">Manage Tournaments</h3>
                            <p class="mb-0 text-white-50 small">Brackets, dates, registrations</p>
                        </div>
                    </div>
                </div>
            </div>
        </a>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <style>
        .admin-hero {
            background: linear-gradient(135deg, #121212, #1a1a1a);
            border: 1px solid rgba(255,255,255,.06);
        }

        .hero-icon {
            width: 60px;
            height: 60px;
            background: #1f1f1f;
            color: #fff;
            font-size: 1.5rem;
            border: 1px solid rgba(255,255,255,.08);
        }

        .admin-card {
            background: #171717;
            border: 1px solid rgba(255,255,255,.06);
            border-radius: 1rem;
            transition: transform .18s ease, box-shadow .18s ease, border-color .18s ease;
        }

            .admin-card:hover {
                transform: translateY(-3px);
                box-shadow: 0 .9rem 1.6rem rgba(0,0,0,.35);
                border-color: rgba(0,255,200,.25);
            }

        .pill-icon {
            width: 48px;
            height: 48px;
            border-radius: 12px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            background: #1f1f1f;
            color: #e6e6e6;
            border: 1px solid rgba(255,255,255,.08);
            font-size: 1.25rem;
        }

        .admin-card:hover .pill-icon {
            border-color: rgba(0,255,200,.35);
            color: #00ffc8;
        }
    </style>
}
