@model SportComplexApp.Web.ViewModels.Trainer.AddTrainerViewModel

@{
    ViewData["Title"] = "Edit Trainer";
}

<div class="d-flex align-items-center justify-content-between mb-4">
    <h2 class="mb-0" style="color:#00ffc8;">Edit Trainer</h2>
    <a asp-action="All" class="btn btn-outline-neon">
        <i class="bi bi-arrow-left-circle me-1"></i> Back
    </a>
</div>

<div class="card card-dark shadow-lg border-0 rounded-4">
    <div class="card-body p-4 p-md-5">
        <form asp-action="Edit" method="post" novalidate>
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="row g-3">
                <!-- First Name -->
                <div class="col-md-6">
                    <label asp-for="Name" class="form-label text-light">First name</label>
                    <div class="input-group neon-input">
                        <span class="input-group-text neon-icon"><i class="bi bi-person"></i></span>
                        <input asp-for="Name" class="form-control" placeholder="e.g. Alex" />
                    </div>
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>

                <!-- Last Name -->
                <div class="col-md-6">
                    <label asp-for="LastName" class="form-label text-light">Last name</label>
                    <div class="input-group neon-input">
                        <span class="input-group-text neon-icon"><i class="bi bi-person-badge"></i></span>
                        <input asp-for="LastName" class="form-control" placeholder="e.g. Ivanov" />
                    </div>
                    <span asp-validation-for="LastName" class="text-danger small"></span>
                </div>

                <!-- Bio -->
                <div class="col-12">
                    <label asp-for="Bio" class="form-label text-light">Bio</label>
                    <div class="input-group neon-input">
                        <span class="input-group-text neon-icon"><i class="bi bi-card-text"></i></span>
                        <textarea asp-for="Bio" rows="3" class="form-control" placeholder="Short intro, experience, certifications…"></textarea>
                    </div>
                    <span asp-validation-for="Bio" class="text-danger small"></span>
                </div>

                <!-- Image URL -->
                <div class="col-12">
                    <label asp-for="ImageUrl" class="form-label text-light">Image URL</label>
                    <div class="input-group neon-input">
                        <span class="input-group-text neon-icon"><i class="bi bi-image"></i></span>
                        <input asp-for="ImageUrl" class="form-control" placeholder="https://…" />
                    </div>
                    <span asp-validation-for="ImageUrl" class="text-danger small"></span>
                </div>

                <!-- Sports (multi-select chips with prechecked state) -->
                <div class="col-12">
                    <div class="d-flex align-items-center justify-content-between">
                        <label class="form-label text-light mb-1">Select Sports</label>
                        <small class="text-light-50">You can select multiple</small>
                    </div>

                    <div class="row g-2">
                        @foreach (var sport in Model.AvailableSports)
                        {
                            var id = $"sport_{sport.Value}";
                            bool isChecked = false;
                            if (int.TryParse(sport.Value, out var val))
                            {
                                isChecked = Model.SelectedSportIds != null && Model.SelectedSportIds.Contains(val);
                            }
                            <div class="col-6 col-md-4 col-lg-3">
                                <input class="btn-check"
                                       type="checkbox"
                                       name="SelectedSportIds"
                                       value="@sport.Value"
                                       id="@id"
                                @(isChecked ? "checked" : null)
                                       autocomplete="off" />
                                <label class="btn btn-outline-neon w-100 selectable" for="@id">
                                    <i class="bi bi-basket2 me-1"></i>@sport.Text
                                </label>
                            </div>
                        }
                    </div>
                    <span asp-validation-for="SelectedSportIds" class="text-danger small"></span>
                </div>
            </div>

            <div class="mt-4 d-flex justify-content-end gap-2">
                <button type="submit" class="btn btn-neon">
                    <i class="bi bi-check-circle me-1"></i> Save Changes
                </button>
                <a asp-action="All" class="btn btn-outline-neon">
                    <i class="bi bi-x-circle me-1"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

    <style>
        .btn-check:checked + .btn.selectable {
            background: #00ffc8;
            color: #000;
            border-color: #00ffc8;
            box-shadow: 0 0 0 .2rem rgba(0,255,200,.25), 0 0 12px #00ffc8;
            font-weight: 700;
        }

        .btn-check:focus + .btn.selectable,
        .btn.selectable:focus-visible {
            outline: none;
            box-shadow: 0 0 0 .2rem rgba(0,255,200,.35);
        }
    </style>
}
