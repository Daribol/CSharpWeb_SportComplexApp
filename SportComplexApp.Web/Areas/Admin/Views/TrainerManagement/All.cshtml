@model IEnumerable<SportComplexApp.Web.ViewModels.Trainer.AllTrainersViewModel>

<h2 class="mb-4 text-center">All Trainers</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="d-flex justify-content-end mb-3">
    <a asp-action="Add" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Add New Trainer
    </a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info text-center">No trainers available.</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-bordered table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Name</th>
                    <th>Last Name</th>
                    <th>Specialization</th>
                    <th>Image</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var trainer in Model)
                {
                    <tr>
                        <td>@trainer.Name</td>
                        <td>@trainer.LastName</td>
                        <td>
                            @if (trainer.Sports.Any())
                            {
                                @foreach (var sport in trainer.Sports)
                                {
                                    <span class="badge bg-info text-dark me-1">@sport</span>
                                }
                            }
                            else
                            {
                                <span class="text-muted">None</span>
                            }
                            </td>
                            <td>
                                @if (!string.IsNullOrWhiteSpace(trainer.ImageUrl))
                                {
                                    <img src="@trainer.ImageUrl" class="img-thumbnail rounded" style="max-width: 80px;" />
                                }
                            else
                            {
                                <span class="text-muted">No Image</span>
                            }
                            </td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@trainer.Id" class="btn btn-outline-warning btn-sm me-2">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-action="Delete" asp-route-id="@trainer.Id" class="btn btn-outline-danger btn-sm">
                                    <i class="bi bi-trash3"></i> Delete
                                </a>
                            </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
