@model IEnumerable<SportComplexApp.Web.ViewModels.Trainer.AllTrainersViewModel>

<h2 class="mb-4">All Trainers</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<a asp-action="Add" class="btn btn-success mb-3">Add New Trainer</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Last Name</th>
            <th>Specialization</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var trainer in Model)
        {
            <tr>
                <td>@trainer.Name</td>
                <td>@trainer.LastName</td>
                <td>
                    @foreach (var sport in trainer.Sports)
                    {
                        <span class="badge bg-secondary">@sport</span>
                    }
                </td>
                <td>
                    @if (!string.IsNullOrEmpty(trainer.ImageUrl))
                    {
                        <img src="@trainer.ImageUrl" width="80" />
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@trainer.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@trainer.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}