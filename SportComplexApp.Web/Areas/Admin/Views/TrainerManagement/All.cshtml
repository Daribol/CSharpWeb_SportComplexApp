@model IEnumerable<SportComplexApp.Web.ViewModels.Trainer.AllTrainersViewModel>

<div class="d-flex align-items-center justify-content-between mb-4">
    <h2 class="mb-0" style="color:#00ffc8;">Manage Trainers</h2>
    <a asp-action="Add" class="btn btn-neon">
        <i class="bi bi-plus-circle me-1"></i> Add New Trainer
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (!Model.Any())
{
    <div class="card card-dark text-center p-5 rounded-4 border-0">
        <div class="display-6 mb-2">🧑‍🏫</div>
        <h5 class="mb-1 text-light">No trainers available</h5>
        <p class="text-light-50 mb-3">Add your first trainer to get started.</p>
        <a asp-action="Add" class="btn btn-neon">
            <i class="bi bi-plus-circle"></i> Add Trainer
        </a>
    </div>
}
else
{
    <div class="row g-4 row-cols-1 row-cols-sm-2 row-cols-lg-3 row-cols-xl-4">
        @foreach (var t in Model)
        {
            <div class="col">
                <div class="card card-dark hover h-100 border-0">
                    @if (!string.IsNullOrWhiteSpace(t.ImageUrl))
                    {
                        <div class="cover ratio ratio-16x9" style="background-image:url('@t.ImageUrl');"></div>
                    }
                    else
                    {
                        <div class="cover cover--placeholder ratio ratio-16x9 d-flex align-items-center justify-content-center">
                            <i class="bi bi-person-bounding-box display-6 text-light-50"></i>
                        </div>
                    }

                    <div class="card-body d-flex flex-column">
                        <div class="d-flex align-items-start justify-content-between mb-2">
                            <h5 class="card-title mb-0 text-white">@t.Name @t.LastName</h5>
                            <span class="badge badge-soft"><i class="bi bi-award me-1"></i> Trainer</span>
                        </div>

                        <div class="mb-3">
                            @if (t.Sports?.Any() == true)
                            {
                                foreach (var sport in t.Sports)
                                {
                                    <span class="badge badge-sport me-1 mb-1">@sport</span>
                                }
                            }
                            else
                            {
                                <span class="text-light-50">No specialization</span>
                            }
                        </div>

                        <div class="mt-auto d-flex gap-2">
                            <a asp-action="Edit" asp-route-id="@t.Id" class="btn btn-outline-neon btn-sm">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@t.Id" class="btn btn-outline-neon btn-sm">
                                <i class="bi bi-trash3"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
}
