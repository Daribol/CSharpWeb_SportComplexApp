@model IEnumerable<SportComplexApp.Web.ViewModels.Trainer.AllTrainersViewModel>

<div class="d-flex align-items-center justify-content-between mb-4">
    <h2 class="mb-0">All Trainers</h2>
    <a asp-action="Add" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Add New Trainer
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (!Model.Any())
{
    <div class="card shadow-sm text-center p-5 bg-light-subtle">
        <div class="display-6 mb-2">🧑‍🏫</div>
        <h5 class="mb-1">No trainers available</h5>
        <p class="text-muted mb-3">Add your first trainer to get started.</p>
        <a asp-action="Add" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add Trainer
        </a>
    </div>
}
else
{
    <div class="row g-4 row-cols-1 row-cols-sm-2 row-cols-lg-3 row-cols-xl-4">
        @foreach (var t in Model)
        {
            <div class="col">
                <div class="card trainer-card h-100 shadow-sm border-0">
                    @if (!string.IsNullOrWhiteSpace(t.ImageUrl))
                    {
                        <div class="trainer-cover ratio ratio-16x9"
                             style="background-image: url('@t.ImageUrl');"></div>
                    }
                    else
                    {
                        <div class="trainer-cover ratio ratio-16x9 trainer-cover--placeholder d-flex align-items-center justify-content-center">
                            <i class="bi bi-person-bounding-box display-6 text-white-50"></i>
                        </div>
                    }

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title mb-1">@t.Name @t.LastName</h5>

                        <div class="mb-3">
                            @if (t.Sports?.Any() == true)
                            {
                                foreach (var sport in t.Sports)
                                {
                                    <span class="badge sport-gradient me-1 mb-1">@sport</span>
                                }
                            }
                            else
                            {
                                <span class="text-muted">No specialization</span>
                            }
                        </div>

                        <div class="mt-auto d-flex gap-2">
                            <a asp-action="Edit" asp-route-id="@t.Id" class="btn btn-outline-warning btn-sm">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@t.Id" class="btn btn-outline-danger btn-sm">
                                <i class="bi bi-trash3"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <style>
        .trainer-card {
            transition: transform .15s ease, box-shadow .15s ease;
            border-radius: 1rem;
        }

            .trainer-card:hover {
                transform: translateY(-3px);
                box-shadow: 0 .75rem 1.5rem rgba(0,0,0,.1);
            }

        .trainer-cover {
            background-size: cover;
            background-position: center;
            border-top-left-radius: 1rem;
            border-top-right-radius: 1rem;
        }

        .trainer-cover--placeholder {
            background: linear-gradient(135deg, #3f7afe, #6610f2);
        }

        .card-title {
            line-height: 1.2;
        }

        .sport-gradient {
            background: linear-gradient(135deg, #4facfe, #00f2fe);
            color: white;
            font-weight: 500;
            box-shadow: 0 2px 6px rgba(0,0,0,.15);
            border-radius: 50rem;
        }
    </style>
}
