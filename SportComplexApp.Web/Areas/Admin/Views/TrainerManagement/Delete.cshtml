@model SportComplexApp.Web.ViewModels.Trainer.DeleteTrainerViewModel

@{
    ViewData["Title"] = "Delete Trainer";
}

<div class="card border-danger shadow-sm mb-4">
    <div class="card-body">
        <h2 class="card-title text-danger mb-3">Confirm Delete</h2>

        <p class="alert alert-warning">
            Are you sure you want to delete the trainer:
            <strong class="text-dark">@Model.Name @Model.LastName</strong>?
        </p>

        <form asp-action="ConfirmDelete" method="post" class="mt-3">
            <input type="hidden" asp-for="Id" />
            <div class="d-flex justify-content-start gap-2">
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Yes, Delete
                </button>
                <a asp-action="All" class="btn btn-secondary">
                    <i class="bi bi-x-circle"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
