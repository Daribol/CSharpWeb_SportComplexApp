@model IEnumerable<SportComplexApp.Web.ViewModels.Sport.AllSportsViewModel>

@{
    ViewData["Title"] = "Manage Sports";
}

<div class="d-flex align-items-center justify-content-between mb-4">
    <h2 class="mb-0" style="color:#00ffc8;">Manage Sports</h2>
    <a asp-action="Add" class="btn btn-neon">
        <i class="bi bi-plus-circle"></i> Add New Sport
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (!Model.Any())
{
    <div class="card card-dark text-center p-5 rounded-4 border-0">
        <div class="display-6 mb-2">🏀</div>
        <h5 class="mb-1 text-light">No sports available</h5>
        <p class="text-light-50 mb-3">Add your first sport to get started.</p>
        <a asp-action="Add" class="btn btn-neon">
            <i class="bi bi-plus-circle"></i> Add Sport
        </a>
    </div>
}
else
{
    <div class="row g-4 row-cols-1 row-cols-sm-2 row-cols-lg-3 row-cols-xl-4">
        @foreach (var sport in Model)
        {
            <div class="col">
                <div class="card card-dark hover h-100 border-0">
                    @if (!string.IsNullOrWhiteSpace(sport.ImageUrl))
                    {
                        <div class="cover ratio ratio-16x9" style="background-image:url('@sport.ImageUrl');"></div>
                    }
                    else
                    {
                        <div class="cover cover--placeholder ratio ratio-16x9 d-flex align-items-center justify-content-center">
                            <i class="bi bi-image display-6 text-light-50"></i>
                        </div>
                    }

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title mb-2 text-white">@sport.Name</h5>

                        <ul class="list-unstyled small text-muted mb-3">
                            <li><i class="bi bi-cash-coin text-success"></i> @sport.Price.ToString("F2") лв</li>
                            <li><i class="bi bi-stopwatch text-primary"></i> @sport.Duration мин</li>
                            <li><i class="bi bi-building text-warning"></i> @sport.Facility</li>
                        </ul>

                        <div class="mt-auto d-flex gap-2">
                            <a asp-action="Edit" asp-route-id="@sport.Id" class="btn btn-outline-neon btn-sm">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@sport.Id" class="btn btn-outline-neon btn-sm">
                                <i class="bi bi-trash3"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
}
