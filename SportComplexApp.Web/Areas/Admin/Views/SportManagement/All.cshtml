@model IEnumerable<SportComplexApp.Web.ViewModels.Sport.AllSportsViewModel>

@{
    ViewData["Title"] = "All Sports";
}

<h2>All Sports</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<a asp-action="Add" class="btn btn-primary mb-3">Add New Sport</a>

@if
   (!Model.Any())
{
    <div class="alert alert-info">No sports available.</div>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Duration</th>
                <th>Facility</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var sport in Model)
            {
                <tr>
                    <td>@sport.Name</td>
                    <td>@sport.Price</td>
                    <td>@sport.Duration</td>
                    <td>@sport.Facility</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@sport.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@sport.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}