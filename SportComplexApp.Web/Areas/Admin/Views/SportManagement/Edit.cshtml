@model SportComplexApp.Web.ViewModels.Sport.AddSportViewModel

@{
    ViewData["Title"] = "Edit Sport";
}

<div class="d-flex align-items-center justify-content-between mb-4">
    <h2 class="mb-0" style="color:#00ffc8;">Edit Sport</h2>
    <a asp-action="All" class="btn btn-outline-neon">
        <i class="bi bi-arrow-left-circle me-1"></i> Back
    </a>
</div>

<div class="card card-dark shadow-lg border-0 rounded-4">
    <div class="card-body p-4 p-md-5">
        <form asp-action="Edit" method="post" novalidate>
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="row g-3">
                <!-- Name -->
                <div class="col-md-6">
                    <label asp-for="Name" class="form-label text-light">Name</label>
                    <div class="input-group neon-input">
                        <span class="input-group-text neon-icon"><i class="bi bi-basket2"></i></span>
                        <input asp-for="Name" class="form-control" placeholder="e.g. Basketball" />
                    </div>
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>

                <!-- Price -->
                <div class="col-md-3">
                    <label asp-for="Price" class="form-label text-light">Price (лв)</label>
                    <div class="input-group neon-input">
                        <span class="input-group-text neon-icon"><i class="bi bi-cash-coin"></i></span>
                        <input asp-for="Price" class="form-control" placeholder="e.g. 25.00" />
                    </div>
                    <span asp-validation-for="Price" class="text-danger small"></span>
                </div>

                <!-- Duration -->
                <div class="col-md-3">
                    <label asp-for="Duration" class="form-label text-light">Duration (min)</label>
                    <div class="input-group neon-input">
                        <span class="input-group-text neon-icon"><i class="bi bi-stopwatch"></i></span>
                        <input asp-for="Duration" class="form-control" placeholder="e.g. 60" />
                    </div>
                    <span asp-validation-for="Duration" class="text-danger small"></span>
                </div>

                <!-- Min People -->
                <div class="col-md-3">
                    <label asp-for="MinPeople" class="form-label text-light">Min People</label>
                    <div class="input-group neon-input">
                        <span class="input-group-text neon-icon"><i class="bi bi-people"></i></span>
                        <input asp-for="MinPeople" class="form-control" placeholder="e.g. 1" />
                    </div>
                    <span asp-validation-for="MinPeople" class="text-danger small"></span>
                </div>

                <!-- Max People -->
                <div class="col-md-3">
                    <label asp-for="MaxPeople" class="form-label text-light">Max People</label>
                    <div class="input-group neon-input">
                        <span class="input-group-text neon-icon"><i class="bi bi-people-fill"></i></span>
                        <input asp-for="MaxPeople" class="form-control" placeholder="e.g. 10" />
                    </div>
                    <span asp-validation-for="MaxPeople" class="text-danger small"></span>
                </div>

                <!-- Image URL -->
                <div class="col-md-6">
                    <label asp-for="ImageUrl" class="form-label text-light">Image URL</label>
                    <div class="input-group neon-input">
                        <span class="input-group-text neon-icon"><i class="bi bi-image"></i></span>
                        <input asp-for="ImageUrl" class="form-control" placeholder="https://…" />
                    </div>
                    <span asp-validation-for="ImageUrl" class="text-danger small"></span>
                </div>

                <!-- Facility -->
                <div class="col-md-6">
                    <label asp-for="FacilityId" class="form-label text-light">Facility</label>
                    <div class="input-group neon-input">
                        <span class="input-group-text neon-icon"><i class="bi bi-building"></i></span>
                        <select asp-for="FacilityId" class="form-select" asp-items="Model.Facilities">
                            <option value="">-- Select Facility --</option>
                        </select>
                    </div>
                    <span asp-validation-for="FacilityId" class="text-danger small"></span>
                </div>
            </div>

            <div class="mt-4 d-flex justify-content-end gap-2">
                <button type="submit" class="btn btn-neon">
                    <i class="bi bi-save2 me-1"></i> Save Changes
                </button>
                <a asp-action="All" class="btn btn-outline-neon">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
}
