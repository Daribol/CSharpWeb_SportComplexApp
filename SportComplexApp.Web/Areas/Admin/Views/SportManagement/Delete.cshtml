@model SportComplexApp.Web.ViewModels.Sport.DeleteSportViewModel

@{
    ViewData["Title"] = "Delete Sport";
}

<h2>Confirm Delete</h2>

<div class="alert alert-danger">
    Are you sure you want to delete the sport: <strong>@Model.Name</strong>?
</div>

<form asp-action="ConfirmDelete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a asp-action="All" class="btn btn-secondary">Cancel</a>
</form>
