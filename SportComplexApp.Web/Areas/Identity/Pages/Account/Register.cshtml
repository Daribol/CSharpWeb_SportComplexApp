@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="d-flex justify-content-center align-items-center vh-100 bg-light">
    <div class="card shadow-lg p-4 rounded-4" style="width: 100%; max-width: 520px;">
        <div class="text-center mb-4">
            <i class="bi bi-person-plus" style="font-size: 3.5rem; color: #0d6efd;"></i>
            <h2 class="mt-2">@ViewData["Title"]</h2>
            <p class="text-muted mb-0">Create your account below.</p>
        </div>

        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="All" class="text-danger mb-3" role="alert"></div>

            <div class="row g-3">
                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="Input.FirstName" class="form-control" placeholder="First Name" />
                        <label asp-for="Input.FirstName">First name</label>
                        <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="Input.LastName" class="form-control" placeholder="Last Name" />
                        <label asp-for="Input.LastName">Last name</label>
                        <span asp-validation-for="Input.LastName" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-floating mt-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-floating mt-3">
                <input asp-for="Input.Password" type="password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-floating mt-3">
                <input asp-for="Input.ConfirmPassword" type="password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="d-flex align-items-center gap-2 mt-3">
                <i class="bi bi-shield-lock"></i>
                <small class="text-muted">
                    Use at least 6 characters, including numbers & symbols.
                </small>
            </div>

            <button id="registerSubmit" type="submit" class="btn btn-primary w-100 btn-lg rounded-pill mt-4">
                Create account
            </button>

            <div class="text-center mt-3">
                <small class="text-muted">Already have an account?</small>
                <a asp-page="/Account/Login" class="ms-1 text-decoration-none">Log in</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
}
