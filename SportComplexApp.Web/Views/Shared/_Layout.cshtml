@using static SportComplexApp.Common.ApplicationConstants
@{
    int currentYear = DateTime.UtcNow.Year;
    string footerNote = (ReleaseYear == currentYear) ?
        $"{currentYear}" : $"{ReleaseYear} - {currentYear}";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SportComplexApp.Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <style>
        html, body {
            height: 100%;
            margin: 0;
        }

        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            background-color: #121212;
        }

        main {
            flex-grow: 1;
            padding-top: 4.5rem;
        }

        /* Navbar Dark + Neon */
        .sc-navbar {
            background: linear-gradient(135deg, #0a0a0a, #1a1a1a);
            border-bottom: 2px solid #00ffc8;
            transition: box-shadow 0.3s ease-in-out;
        }

            .sc-navbar .nav-link,
            .sc-navbar .navbar-brand {
                color: #e0e0e0 !important;
            }

                .sc-navbar .nav-link:hover {
                    color: #00ffc8 !important;
                }

        .glow {
            animation: neonPulse 1.5s infinite alternate;
        }
        @@keyframes neonPulse {
            0%

        {
            box-shadow: 0 0 10px #00ffc8, 0 0 20px rgba(0, 255, 200, 0.5);
        }

        100% {
            box-shadow: 0 0 20px #00ffc8, 0 0 40px rgba(0, 255, 200, 0.8);
        }

        }

        /* Footer Dark Neon */
        .sc-footer {
            background: #000;
            color: rgba(255,255,255,.85);
            transition: box-shadow 0.3s ease-in-out;
        }

            .sc-footer a {
                color: rgba(255,255,255,.85);
                text-decoration: none;
            }

                .sc-footer a:hover {
                    color: #00ffc8;
                }

        .sc-title {
            color: #00ffc8;
            margin-bottom: .5rem;
        }

        .sc-muted {
            color: rgba(255,255,255,.65);
        }

        /* Neon Logo */
        .sc-logo {
            width: 36px;
            height: 36px;
            border-radius: 10px;
            color: #000;
            background: #00ffc8;
            box-shadow: 0 0 15px #00ffc8;
        }

        .sc-brand {
            color: #fff;
        }

        /* Social buttons with neon hover */
        .sc-social {
            width: 36px;
            height: 36px;
            border-radius: 50%;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            background: rgba(255,255,255,.08);
            color: #fff;
            transition: all .2s ease-in-out;
        }

            .sc-social:hover {
                background: #00ffc8;
                color: #000;
                box-shadow: 0 0 10px #00ffc8;
            }

        /* Neon button */
        .sc-btn-gradient {
            background: #00ffc8;
            border: 0;
            color: #000;
            font-weight: 600;
        }

            .sc-btn-gradient:hover {
                filter: brightness(1.1);
                color: #000;
                box-shadow: 0 0 10px #00ffc8;
            }

        /* Footer bottom bar */
        .sc-footbar {
            border-top: 1px solid rgba(255,255,255,.08);
            padding: .75rem 0;
            color: rgba(255,255,255,.7);
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark sc-navbar fixed-top shadow-sm">
            <div class="container-fluid">
                @if (User.IsInRole("Admin"))
                {
                    <a class="navbar-brand fw-bold" asp-area="Admin" asp-controller="Home" asp-action="Index">SportComplex</a>
                }
                else
                {
                    <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">SportComplex</a>
                }
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Sport" asp-action="All">Sports</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Spa" asp-action="All">Spa Service</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Tournament" asp-action="All">Tournaments</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="reservationsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                My Reservations
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="reservationsDropdown">
                                <li><a class="dropdown-item" asp-controller="Sport" asp-action="MyReservations">My Sports</a></li>
                                <li><a class="dropdown-item" asp-controller="Spa" asp-action="MyReservations">My Spa</a></li>
                                <li><a class="dropdown-item" asp-controller="Tournament" asp-action="MyTournaments">My Tournaments</a></li>
                            </ul>
                        </li>
                        @if (User.IsInRole("Trainer"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Trainer" asp-action="Reservations">Trainer Dashboard</a>
                            </li>
                        }
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Admin
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="SportManagement" asp-action="All">Sports</a></li>
                                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="SpaServicesManagement" asp-action="All">Spa Services</a></li>
                                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="TournamentManagement" asp-action="All">Tournaments</a></li>
                                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="UserManagement" asp-action="Index">Users</a></li>
                                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="TrainerManagement" asp-action="All">Trainers</a></li>
                                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="FacilityManagement" asp-action="All">Facilities</a></li>
                                </ul>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="pb-3 container">
        @RenderBody()
    </main>

    <footer class="sc-footer mt-auto">
        <div class="container py-4">
            <div class="row">
                <div class="col-md-4 mb-3">
                    <h5 class="sc-title">SportComplex</h5>
                    <p class="sc-muted">Manage sports, spa services, tournaments, and more with a neon touch.</p>
                </div>
                <div class="col-md-4 mb-3">
                    <h5 class="sc-title">Quick Links</h5>
                    <ul class="list-unstyled">
                        <li><a asp-controller="Sport" asp-action="All">Sports</a></li>
                        <li><a asp-controller="Spa" asp-action="All">Spa Services</a></li>
                        <li><a asp-controller="Tournament" asp-action="All">Tournaments</a></li>
                    </ul>
                </div>
                <div class="col-md-4 mb-3">
                    <h5 class="sc-title">Follow Us</h5>
                    <div class="d-flex gap-2">
                        <a href="#" class="sc-social"><i class="bi bi-facebook"></i></a>
                        <a href="#" class="sc-social"><i class="bi bi-instagram"></i></a>
                        <a href="#" class="sc-social"><i class="bi bi-twitter"></i></a>
                    </div>
                </div>
            </div>
        </div>
        <div class="sc-footbar text-center">
            &copy; @footerNote - SportComplexWebApp
        </div>
    </footer>
    <link rel="stylesheet" href="~/css/neon-theme.css" asp-append-version="true" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)

    <script>
        document.addEventListener("scroll", function () {
            const navbar = document.querySelector(".sc-navbar");
            const footer = document.querySelector(".sc-footer");

            // Navbar glow on scroll
            if (window.scrollY > 10) {
                navbar.classList.add("glow");
            } else {
                navbar.classList.remove("glow");
            }

            // Footer glow when near bottom
            const scrollPosition = window.scrollY + window.innerHeight;
            const footerTop = footer.offsetTop;
            if (scrollPosition >= footerTop) {
                footer.classList.add("glow");
            } else {
                footer.classList.remove("glow");
            }
        });
    </script>
</body>
</html>
