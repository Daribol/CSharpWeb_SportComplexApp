@using static SportComplexApp.Common.ApplicationConstants
@{
    int currentYear = DateTime.UtcNow.Year;
    string footerNote = (ReleaseYear == currentYear) ?
        $"{currentYear}" : $"{ReleaseYear} - {currentYear}";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SportComplexApp.Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                @if(User.IsInRole("Admin"))
                {
                    <a class="navbar-brand" asp-area="Admin" asp-controller="Home" asp-action="Index">SportComplexWebApp</a>
                }
                else
                {
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">SportComplexWebApp</a>
                }
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Sport" asp-action="All">Sports</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Spa" asp-action="All">Spa Service</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Tournament" asp-action="All">Tournaments</a>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="reservationsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                My Reservations
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="reservationsDropdown">
                                <li><a class="dropdown-item" asp-controller="Sport" asp-action="MyReservations">My Sports</a></li>
                                <li><a class="dropdown-item" asp-controller="Spa" asp-action="MyReservations">My Spa</a></li>
                                <li><a class="dropdown-item" asp-controller="Tournament" asp-action="MyTournaments">My Tournaments</a></li>
                            </ul>
                        </li>
                            @if (User.IsInRole("Trainer"))
                            {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Trainer" asp-action="Reservations">Trainer Dashboard</a>
                            </li>
                            }
                            @if (User.IsInRole("Admin"))
                            {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Admin
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="SportManagement" asp-action="All">Sports</a></li>
                                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="SpaServicesManagement" asp-action="All">Spa Services</a></li>
                                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="TournamentManagement" asp-action="All">Tournaments</a></li>
                                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="UserManagement" asp-action="Index">Users</a></li>
                                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="TrainerManagement" asp-action="All">Trainers</a></li>
                                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="FacilityManagement" asp-action="All">Facilities</a></li>
                                </ul>
                            </li>
                            }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @footerNote - SportComplexWebApp
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
