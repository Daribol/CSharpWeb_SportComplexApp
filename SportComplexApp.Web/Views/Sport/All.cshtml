@model IEnumerable<SportComplexApp.Web.ViewModels.Sport.AllSportsViewModel>

@{
    ViewData["Title"] = "All Sports";
}

<h2 class="mb-4 text-center">All Sports</h2>
<hr />

<form method="get" asp-controller="Sport" asp-action="All" class="mb-4">
    <div class="row g-2 align-items-end">
        <div class="col-md-4">
            <label for="searchQuery" class="form-label">Search by Sport Name</label>
            <input type="text" name="searchQuery" id="searchQuery" class="form-control" placeholder="E.g. Basketball..." />
        </div>

        <div class="col-md-3">
            <label for="minDuration" class="form-label">Min Duration (min)</label>
            <input type="number" name="minDuration" id="minDuration" class="form-control" />
        </div>

        <div class="col-md-3">
            <label for="maxDuration" class="form-label">Max Duration (min)</label>
            <input type="number" name="maxDuration" id="maxDuration" class="form-control" />
        </div>

        <div class="col-md-2 d-grid">
            <button type="submit" class="btn btn-outline-primary">
                <i class="bi bi-funnel-fill"></i> Filter
            </button>
        </div>
    </div>

    <div class="mt-2 d-flex justify-content-end">
        <a asp-controller="Sport" asp-action="All" class="btn btn-outline-secondary btn-sm">
            <i class="bi bi-x-circle"></i> Clear
        </a>
    </div>
</form>


<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    @foreach (var sport in Model)
    {
        <div class="col">
            <div class="card h-100 shadow-sm">
                <img src="@sport.ImageUrl" class="card-img-top" alt="@sport.Name" style="height: 200px; object-fit: cover;" />
                <div class="card-body d-flex flex-column justify-content-between">
                    <div>
                        <h5 class="card-title">@sport.Name</h5>
                        <p class="card-text mb-1"><strong>Facility:</strong> @sport.Facility</p>
                        <p class="card-text mb-1"><strong>Price:</strong> $@sport.Price</p>
                        <p class="card-text mb-3"><strong>Duration:</strong> @sport.Duration min</p>
                    </div>
                    <div class="d-flex gap-2 mt-auto">
                        <a asp-action="Reserve" asp-route-id="@sport.Id" class="btn btn-success w-100">
                            <i class="bi bi-calendar-check"></i> Reserve
                        </a>
                        <a asp-controller="Trainer" asp-action="All" asp-route-sportId="@sport.Id" class="btn btn-outline-primary w-100">
                            <i class="bi bi-person-lines-fill"></i> Trainers
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
