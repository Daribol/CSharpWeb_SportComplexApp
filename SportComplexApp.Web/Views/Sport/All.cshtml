@model IEnumerable<SportComplexApp.Web.ViewModels.Sport.AllSportsViewModel>

@{
    ViewData["Title"] = "All Sports";
}

<div class="container mt-4">
    <h2 class="mb-4 text-center" style="color:#00ffc8;">All Sports</h2>

    <form method="get" asp-controller="Sport" asp-action="All" class="mb-4">
        <div class="row g-3 align-items-end">
            <div class="col-md-4">
                <label for="searchQuery" class="form-label text-light">Search by Sport Name</label>
                <div class="input-group neon-input">
                    <span class="input-group-text neon-icon"><i class="bi bi-search"></i></span>
                    <input type="text" name="searchQuery" id="searchQuery" class="form-control" placeholder="E.g. Basketball..." value="@Context.Request.Query["searchQuery"]" />
                </div>
            </div>

            <div class="col-md-3">
                <label for="minDuration" class="form-label text-light">Min Duration (min)</label>
                <div class="input-group neon-input">
                    <span class="input-group-text neon-icon"><i class="bi bi-hourglass-split"></i></span>
                    <input type="number" name="minDuration" id="minDuration" class="form-control" value="@Context.Request.Query["minDuration"]" />
                </div>
            </div>

            <div class="col-md-3">
                <label for="maxDuration" class="form-label text-light">Max Duration (min)</label>
                <div class="input-group neon-input">
                    <span class="input-group-text neon-icon"><i class="bi bi-hourglass"></i></span>
                    <input type="number" name="maxDuration" id="maxDuration" class="form-control" value="@Context.Request.Query["maxDuration"]" />
                </div>
            </div>

            <div class="col-md-2 d-grid">
                <button type="submit" class="btn btn-outline-neon">
                    <i class="bi bi-funnel-fill"></i> Filter
                </button>
            </div>
        </div>

        <div class="mt-2 d-flex justify-content-end">
            <a asp-controller="Sport" asp-action="All" class="btn btn-outline-neon btn-sm">
                <i class="bi bi-x-circle"></i> Clear
            </a>
        </div>
    </form>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            <i class="bi bi-info-circle-fill me-2"></i>No sports found.
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var sport in Model)
            {
                <div class="col">
                    <div class="card card-dark hover h-100 border-0">
                        <div class="cover ratio ratio-16x9" style="background-image:url('@sport.ImageUrl');"></div>
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title mb-2">@sport.Name</h5>
                            <p class="text-muted mb-1"><strong>Facility:</strong> @sport.Facility</p>
                            <p class="text-muted mb-1"><strong>Price:</strong> @sport.Price.ToString("F2") BGN</p>
                            <p class="text-muted mb-3"><strong>Duration:</strong> @sport.Duration min</p>

                            <div class="mt-auto d-flex gap-2">
                                <a asp-action="Reserve" asp-route-id="@sport.Id" class="btn btn-neon w-100">
                                    <i class="bi bi-calendar-check"></i> Reserve
                                </a>
                                <a asp-controller="Trainer" asp-action="All" asp-route-sportId="@sport.Id" class="btn btn-outline-neon w-100">
                                    <i class="bi bi-person-lines-fill"></i> Trainers
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
