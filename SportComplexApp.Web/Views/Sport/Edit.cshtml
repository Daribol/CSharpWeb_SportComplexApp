@model SportComplexApp.Data.Models.Sport

@{
    ViewData["Title"] = "Edit Sport";
}

<h1>Edit Sport</h1>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="FacilityId"></label>
        <select asp-for="FacilityId" class="form-control" asp-items=@(ViewData["Facilities"] as SelectList)></select>
        <span asp-validation-for="FacilityId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Duration"></label>
        <input asp-for="Duration" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ImageUrl"></label>
        <input asp-for="ImageUrl" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

