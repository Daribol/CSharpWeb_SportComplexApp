@model SportComplexApp.Web.ViewModels.Sport.SportReservationFormViewModel

@{
    ViewData["Title"] = "Reserve Sport";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card card-dark shadow-lg border-0 rounded-4 overflow-hidden">
                <div class="card-body p-4 p-md-5">
                    <h2 class="mb-1 text-center" style="color:#00ffc8;">Reserve Sport</h2>
                    <p class="text-center text-muted mb-4">Sport: <span class="text-white">@Model.SportName</span></p>

                    @if (!ViewData.ModelState.IsValid && ViewData.ModelState.Values.Any(v => v.Errors.Count > 0))
                    {
                        <div class="alert alert-danger">
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <div>@error.ErrorMessage</div>
                            }
                        </div>
                    }

                    <form asp-action="Reserve" method="post" novalidate>
                        <input type="hidden" asp-for="SportId" />
                        <input type="hidden" asp-for="SportName" />
                        <input type="hidden" asp-for="FacilityName" />

                        <!-- Facility -->
                        <div class="mb-3">
                            <label class="form-label">Facility</label>
                            <div class="input-group neon-input">
                                <span class="input-group-text neon-icon"><i class="bi bi-building"></i></span>
                                <input class="form-control" value="@Model.FacilityName" readonly />
                            </div>
                            <div class="form-text text-muted">Reservations are held at this facility.</div>
                        </div>

                        <div class="row g-3">
                            <!-- DateTime -->
                            <div class="col-md-6">
                                <label asp-for="ReservationDateTime" class="form-label">
                                    <i class="bi bi-calendar-event me-1"></i> Start date & time
                                </label>
                                <input asp-for="ReservationDateTime"
                                       class="form-control dtl-themed"
                                       type="datetime-local"
                                       step="900" />
                                <span asp-validation-for="ReservationDateTime" class="text-danger small"></span>
                            </div>

                            <!-- Duration -->
                            <div class="col-md-6">
                                <label asp-for="Duration" class="form-label">Duration (min)</label>
                                <div class="input-group neon-input">
                                    <span class="input-group-text neon-icon"><i class="bi bi-stopwatch"></i></span>
                                    <input asp-for="Duration"
                                           min="@Model.MinDuration"
                                           max="@Model.MaxDuration"
                                           class="form-control" />
                                </div>
                                <div class="form-text text-muted">Allowed: @Model.MinDuration–@Model.MaxDuration min.</div>
                                <span asp-validation-for="Duration" class="text-danger small"></span>
                            </div>

                            <!-- People -->
                            <div class="col-md-6">
                                <label asp-for="NumberOfPeople" class="form-label">People</label>
                                <div class="input-group neon-input">
                                    <span class="input-group-text neon-icon"><i class="bi bi-people"></i></span>
                                    <input asp-for="NumberOfPeople"
                                           type="number"
                                           min="@Model.MinPeople"
                                           max="@Model.MaxPeople"
                                           class="form-control" />
                                </div>
                                <div class="form-text text-muted">Allowed: @Model.MinPeople–@Model.MaxPeople people.</div>
                                <span asp-validation-for="NumberOfPeople" class="text-danger small"></span>
                            </div>

                            <!-- Trainer -->
                            <div class="col-md-6">
                                <label asp-for="TrainerId" class="form-label">Trainer (optional)</label>
                                <div class="input-group neon-input">
                                    <span class="input-group-text neon-icon"><i class="bi bi-person-badge"></i></span>
                                    <select asp-for="TrainerId"
                                            class="form-select"
                                            asp-items="@(new SelectList(Model.Trainers, "Id", "FullName"))">
                                        <option value="">-- Select Trainer --</option>
                                    </select>
                                </div>
                                <span asp-validation-for="TrainerId" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between gap-2 mt-4">
                            <a asp-action="All" class="btn btn-outline-neon">
                                <i class="bi bi-arrow-left-circle me-1"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-neon">
                                <i class="bi bi-check-circle me-1"></i> Submit Reservation
                            </button>
                        </div>
                    </form>
                </div>

                <div class="px-4 pb-4">
                    <div class="border-top" style="border-color:rgba(255,255,255,.08)!important;"></div>
                    <div class="d-flex flex-wrap gap-2 mt-3 small text-muted">
                        <span class="badge badge-soft"><i class="bi bi-shield-check me-1"></i> Secure booking</span>
                        <span class="badge badge-soft"><i class="bi bi-lightning-charge me-1"></i> Instant confirmation</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
