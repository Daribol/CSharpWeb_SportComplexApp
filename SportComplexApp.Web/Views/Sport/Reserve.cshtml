@model SportComplexApp.Web.ViewModels.Sport.SportReservationFormViewModel

@{
    ViewData["Title"] = "Reserve Sport";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h2 class="mb-4 text-center text-primary">Reserve Sport: @Model.SportName</h2>

                    @if (!ViewData.ModelState.IsValid && ViewData.ModelState.Values.Any(v => v.Errors.Count > 0))
                    {
                        <div class="alert alert-danger">
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <div>@error.ErrorMessage</div>
                            }
                        </div>
                    }

                    <form asp-action="Reserve" method="post">
                        <input type="hidden" asp-for="SportId" />
                        <input type="hidden" asp-for="SportName" />
                        <input type="hidden" asp-for="FacilityName" />

                        <div class="mb-3">
                            <label class="form-label">Facility</label>
                            <input class="form-control" value="@Model.FacilityName" disabled />
                        </div>

                        <div class="mb-3">
                            <label asp-for="ReservationDateTime" class="form-label"></label>
                            <input asp-for="ReservationDateTime" class="form-control" type="datetime-local" />
                            <span asp-validation-for="ReservationDateTime" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Duration" class="form-label"></label>
                            <input asp-for="Duration" min="@Model.MinDuration" max="@Model.MaxDuration" class="form-control" />
                            <span asp-validation-for="Duration" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="NumberOfPeople" class="form-label"></label>
                            <input asp-for="NumberOfPeople" type="number" min="@Model.MinPeople" max="@Model.MaxPeople" class="form-control" />
                            <span asp-validation-for="NumberOfPeople" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="TrainerId" class="form-label">Trainer (optional)</label>
                            <select asp-for="TrainerId" class="form-select" asp-items="@(new SelectList(Model.Trainers, "Id", "FullName"))">
                                <option value="">-- Select Trainer --</option>
                            </select>
                            <span asp-validation-for="TrainerId" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="All" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left-circle"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-outline-primary">
                                <i class="bi bi-check-circle"></i> Submit Reservation
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
