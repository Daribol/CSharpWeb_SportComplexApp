@model IEnumerable<SportComplexApp.Web.ViewModels.Sport.AllSportsViewModel>

@{
    ViewData["Title"] = "All Sports";
}

<h2 class="mb-4 text-center">Available Sports</h2>

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    @foreach (var sport in Model)
    {
        <div class="col">
            <div class="card h-100 shadow-sm border-0">
                <img src="@sport.ImageUrl" class="card-img-top" alt="@sport.Name" style="height: 200px; object-fit: cover;" />
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@sport.Name</h5>
                    <p class="card-text mb-1"><strong>Duration:</strong> @sport.Duration min</p>
                    <p class="card-text mb-1"><strong>Price:</strong> $@sport.Price</p>
                    <p class="card-text mb-3"><strong>Facility:</strong> @sport.Facility</p>

                    <div class="mt-auto d-flex justify-content-between">
                        <a asp-controller="Reservation" asp-action="Reserve" asp-route-sportId="@sport.Id" class="btn btn-success btn-sm">
                            Reservation
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
