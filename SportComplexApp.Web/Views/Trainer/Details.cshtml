@model SportComplexApp.Web.ViewModels.Trainer.TrainerDetailsViewModel

@{
    ViewData["Title"] = "Trainer Details";
}

<div class="card shadow-lg">
    <div class="row g-0">
        <div class="col-md-4">
            <img src="@Model.ImageUrl" class="img-fluid rounded-start" alt="@Model.Name @Model.LastName" />
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h2 class="card-title">@Model.Name @Model.LastName</h2>
                @if (!string.IsNullOrWhiteSpace(Model.Bio))
                {
                    <p class="card-text"><strong>Bio:</strong> @Model.Bio</p>
                }
            </div>
            <a asp-action="All" asp-route-sportId="@ViewBag.SportId" class="btn btn-secondary">Back</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}