@model SportComplexApp.Web.ViewModels.Trainer.TrainerViewModel
@{
    ViewData["Title"] = "Trainer Details";
}

<div class="card mb-3">
    <div class="row g-0">
        <div class="col-md-4">
            <img src="@Model.ImageUrl" class="img-fluid rounded-start" alt="@Model.FullName">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">@Model.FullName</h5>
                <p class="card-text">@Model.Specialization</p>
                <p class="card-text">@Model.Bio</p>
            </div>
        </div>
    </div>
</div>
