@model IEnumerable<SportComplexApp.Web.ViewModels.Trainer.AllTrainersViewModel>
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "All Trainers";
    var sportsSelect = (IEnumerable<SelectListItem>)ViewBag.Sports ?? Enumerable.Empty<SelectListItem>();
    string q = ViewBag.Query as string ?? "";
    int? selectedSportId = ViewBag.SelectedSportId as int?;
}

<div class="d-flex align-items-center justify-content-between mb-4">
    <h2 class="mb-0" style="color:#00ffc8;">Meet Our Trainers</h2>
</div>

<!-- Filters -->
<div class="card card-dark border-0 shadow-lg rounded-4 mb-4">
    <div class="card-body">
        <form method="get" asp-action="Browse" class="mb-0" novalidate>
            <div class="row g-3 align-items-end">
                <div class="col-md-6">
                    <label class="form-label text-light">Search by name</label>
                    <div class="input-group neon-input">
                        <span class="input-group-text neon-icon"><i class="bi bi-search"></i></span>
                        <input name="q" value="@q" class="form-control" placeholder="Type trainer name..." />
                    </div>
                </div>

                <div class="col-md-4">
                    <label class="form-label text-light">Filter by sport</label>
                    <div class="input-group neon-input">
                        <span class="input-group-text neon-icon"><i class="bi bi-basket2"></i></span>
                        <select name="sportId" class="form-select">
                            @* "All sports" *@
                            @if (selectedSportId == null)
                            {
                                <option value="" selected>All sports</option>
                            }
                            else
                            {
                                <option value="">All sports</option>
                            }

                            @foreach (var s in sportsSelect)
                            {
                                var isSel = selectedSportId.HasValue && s.Value == selectedSportId.Value.ToString();

                                if (isSel)
                                {
                                    <option value="@s.Value" selected>@s.Text</option>
                                }
                                else
                                {
                                    <option value="@s.Value">@s.Text</option>
                                }
                            }
                        </select>
                    </div>
                </div>

                <div class="col-md-2 d-grid">
                    <button type="submit" class="btn btn-outline-neon">
                        <i class="bi bi-funnel"></i> Filter
                    </button>
                </div>
            </div>

            <div class="mt-2 d-flex justify-content-end">
                <a asp-action="Browse" class="btn btn-outline-neon btn-sm">
                    <i class="bi bi-x-circle"></i> Clear
                </a>
            </div>
        </form>
    </div>
</div>

@if (!Model.Any())
{
    <div class="card card-dark text-center p-5 rounded-4 border-0">
        <div class="display-6 mb-2">🧑‍🏫</div>
        <h5 class="mb-1 text-light">No trainers match your criteria.</h5>
        <p class="text-light-50 mb-0">Try a different name or sport.</p>
    </div>
}
else
{
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var t in Model)
        {
            var hasImg = !string.IsNullOrWhiteSpace(t.ImageUrl);
            <div class="col">
                <div class="card card-dark hover h-100 border-0 rounded-4">
                    @if (hasImg)
                    {
                        <div class="cover ratio ratio-16x9" style="background-image:url('@t.ImageUrl');"></div>
                    }
                    else
                    {
                        <div class="cover cover--placeholder ratio ratio-16x9 d-flex align-items-center justify-content-center">
                            <i class="bi bi-person-bounding-box display-6 text-light-50"></i>
                        </div>
                    }

                    <div class="card-body d-flex flex-column">
                        <div class="d-flex align-items-start justify-content-between mb-2">
                            <h5 class="card-title mb-0 text-white">@t.Name @t.LastName</h5>
                            <span class="badge badge-soft"><i class="bi bi-award me-1"></i> Trainer</span>
                        </div>

                        <div class="mb-3">
                            @if (t.Sports?.Any() == true)
                            {
                                foreach (var s in t.Sports)
                                {
                                    <span class="badge badge-sport me-1 mb-1">@s</span>
                                }
                            }
                            else
                            {
                                <span class="text-light-50">No sports assigned</span>
                            }
                        </div>

                        <div class="mt-auto d-flex gap-2">
                            <a asp-action="Details" asp-route-id="@t.Id" class="btn btn-outline-neon btn-sm w-100">
                                <i class="bi bi-person-vcard"></i> Details
                            </a>
                            <a asp-controller="Sport" asp-action="All" class="btn btn-neon btn-sm w-100">
                                <i class="bi bi-calendar-plus"></i> Book a Sport
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
}
