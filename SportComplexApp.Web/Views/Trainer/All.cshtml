@model IEnumerable<SportComplexApp.Web.ViewModels.Trainer.TrainerViewModel>
@{
    ViewData["Title"] = "Trainers";
}

<h2 class="mb-4">Trainers for the Sport</h2>

@if (!Model.Any())
{
    <p>No trainers available for this sport.</p>
}
else
{
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var trainer in Model)
        {
            <div class="col">
                <div class="card h-100">
                    <img src="@trainer.ImageUrl" class="card-img-top" alt="@trainer.FullName" style="height: 200px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title">@trainer.FullName</h5>
                        <p class="card-text">@trainer.Specialization</p>
                        <a asp-action="Details" asp-route-id="@trainer.Id" class="btn btn-outline-primary btn-sm">Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
}