@model IEnumerable<SportComplexApp.Web.ViewModels.Trainer.AllTrainersViewModel>

@{
    ViewData["Title"] = "Trainers";
}

<div class="container mt-4">
    <h2 class="mb-4 text-center text-primary">Trainers for This Sport</h2>
    <hr />

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            <i class="bi bi-info-circle-fill me-2"></i>No trainers are available for this sport.
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var trainer in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm border-0">
                        <img src="@trainer.ImageUrl"
                             class="card-img-top rounded-top"
                             alt="@trainer.Name @trainer.LastName"
                             style="height: 250px; object-fit: cover;" />

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-center">@trainer.Name @trainer.LastName</h5>

                            <p class="card-text">
                                <strong>Sports:</strong>
                                @if (trainer.Sports.Any())
                                {
                                    @string.Join(", ", trainer.Sports)
                                }
                                else
                                {
                                    <span>None</span>
                                }
                            </p>

                            <div class="mt-auto">
                                <a asp-controller="Trainer"
                                   asp-action="Details"
                                   asp-route-id="@trainer.Id"
                                   asp-route-sportId="@ViewBag.SportId"
                                   class="btn btn-outline-primary btn-sm w-100">
                                    <i class="bi bi-person-lines-fill me-1"></i> View Details
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
