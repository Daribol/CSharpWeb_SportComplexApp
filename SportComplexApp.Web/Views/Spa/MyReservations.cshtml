@model IEnumerable<SportComplexApp.Web.ViewModels.Spa.MySpaReservationViewModel>

@{
    ViewData["Title"] = "My Spa Reservations";
}

<div class="container mt-5">
    <h2 class="mb-4 text-center" style="color:#00ffc8;">My Spa Reservations</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            <i class="bi bi-info-circle-fill me-2"></i>You don't have any spa reservations yet.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover align-middle border rounded shadow-sm neon-table">
                <thead>
                    <tr>
                        <th>Spa Service</th>
                        <th>Date & Time</th>
                        <th>Duration</th>
                        <th>Price</th>
                        <th>People</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var reservation in Model)
                    {
                        <tr>
                            <td class="fw-semibold">@reservation.SpaServiceName</td>
                            <td>@reservation.DateTime.ToString("f")</td>
                            <td>@reservation.Duration minutes</td>
                            <td>@reservation.TotalPrice.ToString("F2") BGN</td>
                            <td>@reservation.People</td>
                            <td class="text-center">
                                <form asp-action="Cancel" asp-route-id="@reservation.Id" method="post"
                                      onsubmit="return confirm('Are you sure you want to cancel this reservation?');"
                                      class="d-inline">
                                    <button type="submit" class="btn btn-outline-neon btn-sm">
                                        <i class="bi bi-x-circle"></i> Cancel
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <style>
        .neon-table thead {
            background-color: #111;
            color: #00ffc8;
            border-bottom: 2px solid #00ffc8;
        }

        .neon-table th, .neon-table td {
            border-color: rgba(0,255,200,.2) !important;
            color: #e6e6e6;
        }

        .neon-table tbody tr:hover {
            background-color: rgba(0,255,200,.08);
            color: #fff;
        }

        .btn-outline-neon {
            border: 1px solid #00ffc8;
            color: #00ffc8;
            background: transparent;
            font-weight: 600;
        }

            .btn-outline-neon:hover {
                background: #00ffc8;
                color: #000;
                box-shadow: 0 0 10px #00ffc8;
            }
    </style>
}
