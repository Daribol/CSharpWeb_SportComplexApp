@model SportComplexApp.Web.ViewModels.Spa.SpaDetailsViewModel

@{
    ViewData["Title"] = "Spa Details";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded" />
        </div>
        <div class="col-md-6">
            <h2>@Model.Name</h2>
            <p><strong>Price:</strong> @Model.Price лв</p>
            <p>@Model.Description</p>
            <hr />
            <h5>Procedure Details</h5>
            <p>@Model.ProcedureDetails</p>

            <a asp-controller="Spa" asp-action="Reserve" asp-route-id="@Model.Id" class="btn btn-success mt-3">Reserve</a>
            <a asp-action="All" class="btn btn-secondary mt-3 ms-2">Back</a>
        </div>
    </div>
</div>
