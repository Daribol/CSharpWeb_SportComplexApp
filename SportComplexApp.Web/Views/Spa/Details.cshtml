@model SportComplexApp.Web.ViewModels.Spa.SpaDetailsViewModel

@{
    ViewData["Title"] = "Spa Details";
}

<div class="container mt-5">
    <div class="row g-4 align-items-center">
        <!-- Image -->
        <div class="col-md-6">
            <div class="border rounded shadow-sm overflow-hidden">
                <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid w-100" style="object-fit: cover; height: 350px;" />
            </div>
        </div>

        <!-- Details -->
        <div class="col-md-6">
            <h2 class="mb-3">@Model.Name</h2>
            <ul class="list-group list-group-flush mb-3">
                <li class="list-group-item"><strong>Duration:</strong> @Model.Duration minutes</li>
                <li class="list-group-item"><strong>Price:</strong> @Model.Price лв</li>
            </ul>

            <p class="text-muted mb-3">@Model.Description</p>

            <div class="mb-3">
                <h5>Procedure Details</h5>
                <p>@Model.ProcedureDetails</p>
            </div>

            <div class="d-flex gap-2 mt-4">
                <a asp-controller="Spa" asp-action="Reserve" asp-route-id="@Model.Id" class="btn btn-outline-success">
                    <i class="bi bi-calendar-check"></i> Reserve
                </a>
                <a asp-action="All" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left-circle"></i> Back
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
