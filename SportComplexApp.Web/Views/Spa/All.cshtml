@model IEnumerable<SportComplexApp.Web.ViewModels.Spa.SpaServiceViewModel>

@{
    ViewData["Title"] = "All Spa Services";
}

<h2 class="mb-4 text-center">Available Spa Services</h2>
<hr />

<form method="get" asp-controller="Spa" asp-action="All" class="mb-4">
    <div class="row g-2 align-items-end">
        <div class="col-md-4">
            <label for="searchQuery" class="form-label">Search Spa Services</label>
            <input type="text" name="searchQuery" id="searchQuery" class="form-control" placeholder="e.g. Massage, Sauna..." />
        </div>

        <div class="col-md-3">
            <label for="minDuration" class="form-label">Min Duration (min)</label>
            <input type="number" name="minDuration" id="minDuration" class="form-control" />
        </div>

        <div class="col-md-3">
            <label for="maxDuration" class="form-label">Max Duration (min)</label>
            <input type="number" name="maxDuration" id="maxDuration" class="form-control" />
        </div>

        <div class="col-md-2 d-grid">
            <button type="submit" class="btn btn-outline-primary">
                <i class="bi bi-funnel-fill"></i> Filter
            </button>
        </div>
    </div>

    <div class="mt-2 d-flex justify-content-end">
        <a asp-controller="Spa" asp-action="All" class="btn btn-outline-secondary btn-sm">
            <i class="bi bi-x-circle"></i> Clear
        </a>
    </div>
</form>


<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    @foreach (var spa in Model)
    {
        <div class="col">
            <div class="card h-100 shadow-sm border-0">
                <img src="@spa.ImageUrl" class="card-img-top" alt="@spa.Name" style="height: 200px; object-fit: cover;" />
                <div class="card-body d-flex flex-column justify-content-between">
                    <div>
                        <h5 class="card-title">@spa.Name</h5>
                        <p class="card-text">@spa.Description</p>
                        <p class="card-text mb-1"><strong>Duration:</strong> @spa.Duration minutes</p>
                        <p class="card-text"><strong>Price:</strong> @spa.Price лв</p>
                    </div>

                    <div class="d-flex gap-2 mt-3">
                        <a asp-controller="Spa" asp-action="Reserve" asp-route-id="@spa.Id" class="btn btn-outline-success w-100">
                            <i class="bi bi-calendar-check"></i> Reserve
                        </a>
                        <a asp-action="Details" asp-route-id="@spa.Id" class="btn btn-outline-secondary w-100">
                            <i class="bi bi-info-circle"></i> Details
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
