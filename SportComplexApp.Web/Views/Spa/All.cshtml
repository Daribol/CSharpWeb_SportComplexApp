@model IEnumerable<SportComplexApp.Web.ViewModels.Spa.SpaServiceViewModel>

@{
    ViewData["Title"] = "All Spa Services";
}

<h2 class="mb-4 text-center">Available Spa Services</h2>

<form method="get" asp-controller="Spa" asp-action="All" class="mb-4">
    <div class="input-group mb-2">
        <input type="text" name="searchQuery" class="form-control" placeholder="Search spa services......" />
    </div>
    <div class="d-flex mb-2">
        <input type="number" name="minDuration" class="form-control me-2" placeholder="Min Duration {minutes}" />
        <input type="number" name="maxDuration" class="form-control" placeholder="Max Duration {minutes}" />
    </div>
    <div class="input-group">
        <button type="submit" class="btn btn-outline-secondary">Search</button>
        <a asp-controller="Spa" asp-action="All" class="btn btn-outline-secondary">Clear</a>
    </div>
</form>

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    @foreach (var spa in Model)
    {
        <div class="col">
            <div class="card h-100 shadow-sm border-0">
                <img src="@spa.ImageUrl" class="card-img-top" alt="@spa.Name" style="height: 200px; object-fit: cover;" />
                <div class="card-body d-flex flex-column justify-content-between">
                    <div>
                        <h5 class="card-title">@spa.Name</h5>
                        <p class="card-text">@spa.Description</p>
                        <p class="card-text mb-1"><strong>Duration:</strong> @spa.Duration minutes</p>
                        <p class="card-text"><strong>Price:</strong> @spa.Price лв</p>
                    </div>

                    <div class="d-flex gap-2 mt-3">
                        <a asp-controller="Spa" asp-action="Reserve" asp-route-id="@spa.Id" class="btn btn-outline-success w-100">
                            <i class="bi bi-calendar-check"></i> Reserve
                        </a>
                        <a asp-action="Details" asp-route-id="@spa.Id" class="btn btn-outline-secondary w-100">
                            <i class="bi bi-info-circle"></i> Details
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
