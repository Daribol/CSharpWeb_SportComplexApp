@using SportComplexApp.Web.ViewModels.Tournament
@model IEnumerable<TournamentViewModel>
<h2 class="mb-4">My Registered Tournaments</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

@if (!Model.Any())
{
    <div class="alert alert-info">You are not registered in any tournaments yet.</div>
}
else
{
    <ul class="list-group">
        @foreach (var tournament in Model)
        {
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">@tournament.Name</h5>
                    <p class="card-text"><strong>Спорт:</strong> @tournament.Sport</p>
                    <p class="card-text"><strong>Начало:</strong> @tournament.StartDate</p>
                    <p class="card-text"><strong>Окончание:</strong> @tournament.EndDate</p>
                    <p class="card-text">@tournament.Description</p>

                    @if (tournament.StartDate > DateTime.Now)
                    {
                        <form asp-action="Unregister" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@tournament.Id" />
                            <button type="submit" class="btn btn-danger btn-sm">Unregister</button>
                        </form>
                    }
                </div>
            </div>
        }
    </ul>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}